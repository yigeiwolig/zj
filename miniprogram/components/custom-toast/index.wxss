/* Modalï¼ˆå¸¦å¼¹å‡º+æ”¶ç¼©é€€å‡ºåŠ¨ç”»ï¼‰ */
.ct-modal {
  width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.12);
  animation: dialogBoxPopIn 0.35s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
}
.ct-mask.closing .ct-modal {
  animation: dialogBoxShrinkOut 0.4s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}
@keyframes dialogBoxPopIn {
  from { opacity: 0; transform: scale(0.88); }
  to { opacity: 1; transform: scale(1); }
}
@keyframes dialogBoxShrinkOut {
  0% {
    transform: scale(1) translateY(0);
    opacity: 1;
    filter: blur(0);
  }
  100% {
    transform: scale(0.6) translateY(-60rpx);
    opacity: 0;
    filter: blur(12rpx);
  }
}
