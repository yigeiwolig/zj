/* components/custom-toast/index.wxss */
.ct-mask {
  position: fixed; top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.4);
  z-index: 99999;
  display: flex; align-items: center; justify-content: center;
}

/* Modal */
.ct-modal {
  width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.12);
  animation: scaleIn 0.2s ease-out;
}
.ct-modal-title {
  padding: 40rpx 40rpx 0;
  text-align: center;
  font-size: 34rpx;
  font-weight: 700;
  color: #000;
}
.ct-modal-content {
  padding: 30rpx 40rpx 40rpx;
  text-align: center;
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
  min-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.ct-modal-footer {
  display: flex;
  border-top: 1rpx solid #eee;
}
.ct-modal-btn {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
}
.ct-modal-btn:active { background: #f5f5f5; }
.ct-modal-btn.cancel { border-right: 1rpx solid #eee; font-weight: 400; color: #666 !important; }
.ct-modal-btn.confirm { color: #000 !important; }

/* Loading */
.ct-loading {
  background: rgba(255,255,255,0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  display: flex; flex-direction: column; align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
  min-width: 200rpx;
}
.ct-loading-spinner {
  width: 60rpx; height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top-color: #000;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}
.ct-loading-spinner.small {
  width: 40rpx; height: 40rpx;
  border-width: 4rpx;
  margin-bottom: 10rpx;
}
.ct-loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #333;
}

/* Toast */
.ct-toast-mask {
  position: fixed; top: 0; left: 0; right: 0; bottom: 0;
  z-index: 99999;
  display: flex; align-items: center; justify-content: center;
  pointer-events: none;
}
.ct-toast {
  background: #fff;
  color: #000;
  padding: 24rpx 48rpx;
  border-radius: 16rpx;
  display: flex; flex-direction: column; align-items: center;
  box-shadow: 0 8rpx 30rpx rgba(0,0,0,0.15);
  max-width: 60%;
  animation: fadeIn 0.2s ease-out;
  pointer-events: auto;
}
.ct-toast-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
  font-weight: bold;
}
.ct-toast-icon.error { color: #ff3b30; }
.ct-toast-text {
  font-size: 28rpx;
  text-align: center;
  line-height: 1.4;
  font-weight: 500;
}

@keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
@keyframes scaleIn { 0% { transform: scale(0.9); opacity: 0; } 100% { transform: scale(1); opacity: 1; } }
@keyframes fadeIn { 0% { opacity: 0; transform: translateY(10px); } 100% { opacity: 1; transform: translateY(0); } }