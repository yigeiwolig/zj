.ct-toast {
  background: #fff;
  color: #000;
  padding: 34rpx 56rpx;
  border-radius: 24rpx;
  display: flex; flex-direction: column; align-items: center;
  box-shadow: 0 12rpx 48rpx rgba(0,0,0,0.12), 0 4rpx 16rpx rgba(0,0,0,0.08);
  max-width: 60%;
  min-width: 280rpx;
  overflow: hidden;
  animation: toastSlideIn 0.35s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
  pointer-events: auto;
  position: relative;
}
.ct-toast-mask.closing .ct-toast {
  animation: autoToastShrinkOut 0.4s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}
@keyframes autoToastShrinkOut {
  0% {
    transform: scale(1) translateY(0);
    opacity: 1;
    filter: blur(0);
  }
  100% {
    transform: scale(0.6) translateY(-60rpx);
    opacity: 0;
    filter: blur(12rpx);
  }
}
.ct-toast-text {
  font-size: 32rpx;
  text-align: center;
  line-height: 1.5;
  font-weight: 600;
  color: #1D1D1F;
  letter-spacing: 0.5rpx;
  animation: toastTextPop 0.28s cubic-bezier(0.34, 1.56, 0.64, 1) both;
}

@keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
/* scaleIn å·²ç§»é™¤ï¼Œæ”¹ç”¨ dialogBoxPopIn */
@keyframes fadeIn { 0% { opacity: 0; transform: translateY(10px); } 100% { opacity: 1; transform: translateY(0); } }
@keyframes toastSlideIn {
  0% {
    opacity: 0;
    transform: translateY(-40rpx) scale(0.9);
  }
  60% {
    transform: translateY(8rpx) scale(1.02);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

@keyframes toastTextPop {
  0%   { transform: translateY(6rpx); opacity: 0.2; }
  65%  { transform: translateY(-2rpx); opacity: 1; }
  100% { transform: translateY(0); opacity: 1; }
}