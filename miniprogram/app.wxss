page {
  background: #f5f7fb;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
  color: #0f1b2d;
}

/* 全局输入框居中（后续页面可单独覆盖） */
input, textarea {
  text-align: center;
}

.page {
  min-height: 100vh;
  padding: 32rpx;
  box-sizing: border-box;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 12rpx 24rpx rgba(4, 18, 45, 0.08);
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #04122d;
}

.primary-btn {
  background: linear-gradient(135deg, #1c4cfe, #0d8bff);
  color: #fff;
  border: none;
}

.secondary-btn {
  background: #fff;
  color: #1c4cfe;
  border: 2rpx solid rgba(28, 76, 254, 0.4);
}

.cta-btn {
  border-radius: 999rpx;
  padding: 0 24rpx;
  line-height: 80rpx;
}

/* ================= 全局弹窗体系 ================= */
.g-loading-mask,
.g-dialog-mask,
.g-sheet-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.55);
  z-index: 99999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.g-loading-box {
  width: 560rpx;
  background: rgba(0,0,0,0.88);
  border-radius: 28rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.g-spinner {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255,255,255,0.25);
  border-top-color: #fff;
  animation: gspin 0.9s linear infinite;
}

@keyframes gspin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.g-loading-text {
  color: #fff;
  font-size: 26rpx;
  font-weight: 600;
}

.g-dialog-box {
  width: 640rpx;
  background: #fff;
  border-radius: 32rpx;
  overflow: hidden;
}

.g-dialog-title {
  padding: 36rpx 40rpx 10rpx;
  font-size: 34rpx;
  font-weight: 800;
  color: #111;
}

.g-dialog-content {
  padding: 0 40rpx 30rpx;
  font-size: 28rpx;
  color: #444;
  line-height: 1.5;
}

.g-dialog-btn-row {
  display: flex;
  border-top: 1rpx solid #eee;
}

.g-dialog-btn {
  flex: 1;
  text-align: center;
  padding: 26rpx 0;
  font-size: 30rpx;
  font-weight: 700;
}

.g-dialog-btn.cancel {
  color: #666;
  border-right: 1rpx solid #eee;
}

.g-dialog-btn.confirm {
  color: #000;
}

/* sheet */
.g-sheet-mask {
  align-items: flex-end;
}

.g-sheet-box {
  width: 100%;
  padding: 20rpx 24rpx calc(env(safe-area-inset-bottom) + 20rpx);
  box-sizing: border-box;
}

.g-sheet-title {
  text-align: center;
  font-size: 26rpx;
  color: #8e8e93;
  padding: 16rpx 0 18rpx;
}

.g-sheet-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx 0;
  text-align: center;
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.g-sheet-cancel {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx 0;
  text-align: center;
  font-size: 32rpx;
  font-weight: 800;
}

/* input */
.g-input {
  height: 96rpx;
  margin: 0 40rpx 30rpx;
  background: #F5F5F7;
  border-radius: 20rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  text-align: left;
  box-sizing: border-box;
}
