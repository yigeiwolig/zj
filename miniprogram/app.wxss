page {
  background: #f5f7fb;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
  color: #0f1b2d;
}

/* 全局输入框居中（后续页面可单独覆盖） */
input, textarea {
  text-align: center;
}

.page {
  min-height: 100vh;
  padding: 32rpx;
  box-sizing: border-box;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 12rpx 24rpx rgba(4, 18, 45, 0.08);
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #04122d;
}

.primary-btn {
  background: linear-gradient(135deg, #1c4cfe, #0d8bff);
  color: #fff;
  border: none;
}

.secondary-btn {
  background: #fff;
  color: #1c4cfe;
  border: 2rpx solid rgba(28, 76, 254, 0.4);
}

.cta-btn {
  border-radius: 999rpx;
  padding: 0 24rpx;
  line-height: 80rpx;
}

/* ================= 全局弹窗体系 ================= */
.g-loading-mask,
.g-dialog-mask,
.g-sheet-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  /* 仅 loading 要白色模糊，dialog/sheet 保持原逻辑：这里先用透明，分别覆盖 */
  background: transparent;
  z-index: 99999;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Loading：白色虚化遮罩 */
.g-loading-mask {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(12px);
}

/* 你的 loader 卡片 */
.g-loader {
  width: 600rpx;
  border-radius: 20rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
  padding: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.12);
  box-sizing: border-box;
}

.g-loading-bar {
  width: 100%;
  height: 20rpx;
  background: #E5E5EA;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
}

.g-loading-bar::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 50%;
  height: 100%;
  background: #1c1c1e;
  border-radius: 20rpx;
  z-index: 1;
  animation: gLoadingBar 0.6s alternate infinite ease-in-out;
}

.g-loader-label {
  color: #1c1c1e;
  font-size: 28rpx;
  font-weight: 700;
  animation: gLabelBlink 0.6s alternate infinite;
}

@keyframes gLabelBlink {
  from { opacity: 0.35; }
  to   { opacity: 1; }
}

@keyframes gLoadingBar {
  0%   { left: 0%; }
  50%  { left: 25%; }
  100% { left: 50%; }
}

/* Dialog/Sheet：维持原先的暗色遮罩体验（不影响 loading） */
.g-dialog-mask,
.g-sheet-mask {
  background: rgba(0,0,0,0.55);
}

.g-dialog-box {
  width: 640rpx;
  background: #fff;
  border-radius: 32rpx;
  overflow: hidden;
}

.g-dialog-title {
  padding: 36rpx 40rpx 10rpx;
  font-size: 34rpx;
  font-weight: 800;
  color: #111;
}

.g-dialog-content {
  padding: 0 40rpx 30rpx;
  font-size: 28rpx;
  color: #444;
  line-height: 1.5;
}

.g-dialog-btn-row {
  display: flex;
  border-top: 1rpx solid #eee;
}

.g-dialog-btn {
  flex: 1;
  text-align: center;
  padding: 26rpx 0;
  font-size: 30rpx;
  font-weight: 700;
}

.g-dialog-btn.cancel {
  color: #666;
  border-right: 1rpx solid #eee;
}

.g-dialog-btn.confirm {
  color: #000;
}

/* sheet */
.g-sheet-mask {
  align-items: flex-end;
}

.g-sheet-box {
  width: 100%;
  padding: 20rpx 24rpx calc(env(safe-area-inset-bottom) + 20rpx);
  box-sizing: border-box;
}

.g-sheet-title {
  text-align: center;
  font-size: 26rpx;
  color: #8e8e93;
  padding: 16rpx 0 18rpx;
}

.g-sheet-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx 0;
  text-align: center;
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.g-sheet-cancel {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx 0;
  text-align: center;
  font-size: 32rpx;
  font-weight: 800;
}

/* input */
.g-input {
  height: 96rpx;
  margin: 0 40rpx 30rpx;
  background: #F5F5F7;
  border-radius: 20rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  text-align: left;
  box-sizing: border-box;
}
