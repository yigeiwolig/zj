  border-color: #007AFF;
  color: #007AFF;
}

/* 配件网格 */
.section-label {
  font-size: 24rpx;
  color: #86868B;
  font-weight: 700;
  margin-bottom: 20rpx;
}
.parts-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}
.part-tag {
  padding: 20rpx 30rpx;
  background: #F5F5F7;
  border-radius: 40rpx;
  font-size: 26rpx;
  font-weight: 500;
  position: relative;
}
.part-tag.active {
  background: #111;
  color: #fff;
}
.del-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 32rpx;
  height: 32rpx;
  background: #FF3B30;
  color: #fff;
  border-radius: 50%;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.add-btn-dashed {
  padding: 20rpx 30rpx;
  border: 2rpx dashed #999;
  border-radius: 40rpx;
  color: #666;
  font-size: 24rpx;
}

/* 表单输入 */
.input-area {
  width: 100%;
  background: #F5F5F7;
  border-radius: 20rpx;
  padding: 30rpx;
  font-size: 30rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

/* === 联系信息板块 === */
.contact-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  margin-top: 30rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.03);
}

/* 头部点击区 */
.contact-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}

.header-left {
  display: flex;
  align-items: center;
}

.section-label {
  font-size: 30rpx;
  font-weight: 700;
  color: #1D1D1F;
}

/* 箭头图标 */
.arrow {
  width: 16rpx;
  height: 16rpx;
  border-right: 4rpx solid #C7C7CC;
  border-bottom: 4rpx solid #C7C7CC;
  transform: rotate(45deg);
  margin-left: 16rpx;
  margin-top: -6rpx;
  transition: transform 0.3s ease;
}

.arrow.up {
  transform: rotate(-135deg);
  margin-top: 6rpx;
}

.smart-paste {
  font-size: 26rpx;
  color: #007AFF;
  font-weight: 600;
  padding: 10rpx 20rpx;
  background: #F0F8FF;
  border-radius: 30rpx;
}

/* 折叠动画容器 */
.contact-body {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.4s cubic-bezier(0.25, 1, 0.5, 1);
  background: #fff;
}

.contact-body.expanded {
  max-height: 600rpx;
}

.input-wrapper {
  padding: 0 30rpx 40rpx 30rpx;
}

/* 修复输入框显示异常 */
.input-field {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #F5F5F7;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #000;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.input-field:last-child {
  margin-bottom: 0;
}

.ph-style {
  color: #AEAEB2;
}
.upload-box {
  border: 4rpx dashed #C7C7CC;
  border-radius: 24rpx;
  padding: 60rpx;
  text-align: center;
  margin-bottom: 40rpx;
}
/* 旧的 section-row / smart-paste 已被新的 contact-section 替代 */

/* 底部栏 */
.bottom-dock {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  padding: 30rpx 40rpx calc(60rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 200;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.05);
}
.submit-btn {
  margin: 0;
  background: #000;
  color: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
  padding: 20rpx 60rpx;
}

/* ================== 教程锁（修复版） ================== */
.lock-screen {
  text-align: center;
  padding: 60rpx 0;
  margin-top: 100rpx;
  position: relative;
  background: #fff;
  z-index: 10;
}
.dots-row {
  display: flex;
  justify-content: center;
  gap: 30rpx;
  margin: 60rpx 0;
}
.dot {
  width: 24rpx;
  height: 24rpx;
  background: #E5E5EA;
  border-radius: 50%;
  transition: all 0.2s;
}
.dot.filled {
  background: #000;
  transform: scale(1.2);
}
.hidden-input {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  z-index: 20;
  color: transparent;
}

/* === 视频教程列表 (大卡片风格) === */
.video-list-container {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  padding-bottom: 60rpx;
}

.video-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06);
  display: flex;
  flex-direction: column;
  position: relative;
  transition: box-shadow 0.2s, opacity 0.2s;
  /* 性能优化：启用硬件加速 */
  transform: translateZ(0);
  backface-visibility: hidden;
}

/* 拖拽中的卡片：移除 transition，让 translateY 立即响应 */
.video-card.dragging {
  transition: none !important;
  transform: translateZ(0) scale(1.02);
  box-shadow: 0 12rpx 32rpx rgba(0,0,0,0.15);
  z-index: 100;
  opacity: 0.95;
  border: 2rpx solid #007AFF;
  /* 性能优化：提示浏览器优化此元素的动画 */
  will-change: transform;
}

/* 拖拽结束后，卡片回到原位的动画 */
.video-card:not(.dragging) {
  transition: transform 0.3s ease-out, box-shadow 0.2s, opacity 0.2s;
}

/* 管理员模式下，视频卡片添加拖拽提示 */
.video-list-container .video-card {
  cursor: grab;
}

.video-list-container .video-card:active {
  cursor: grabbing;
}

.video-cover {
  width: 100%;
  height: 380rpx;
  position: relative;
}

.video-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.play-btn-overlay {
  width: 100rpx;
  height: 100rpx;
  background: rgba(0,0,0,0.4);
  backdrop-filter: blur(10rpx);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 40rpx;
  border: 2rpx solid rgba(255,255,255,0.6);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.2);
}

.video-info {
