page {
  background-color: #F2F2F7;
  font-family: -apple-system, Helvetica, sans-serif;
}

.container {
  width: 100vw;
  height: 100vh;
  position: relative;
  overflow: hidden;
}

/* === 首页视图 === */
.home-view {
  width: 100%;
  height: 100%;
  padding-bottom: 50px;
  overflow-y: auto;
  transition: transform 0.4s ease, opacity 0.4s ease;
  background-color: #F2F2F7;
}

.home-view.shrink {
  transform: scale(0.92);
  opacity: 0;
  pointer-events: none;
}

.nav-header {
  padding-top: calc(env(safe-area-inset-top) + 88rpx);
  padding-left: 40rpx;
  padding-right: 40rpx;
  padding-bottom: 20rpx;
  background-color: #F2F2F7;
  position: sticky;
  top: 0;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 统一返回按钮样式 - 与 azjc 页面一致 */
.nav-back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
  flex-shrink: 0;
}

.nav-back-btn:active {
  transform: scale(0.95);
  opacity: 0.7;
}

/* 返回箭头图标 - 统一使用文字符号 */
.nav-back-btn .back-icon {
  font-size: 48rpx;
  font-weight: 300;
  color: #000;
  line-height: 1;
}

.nav-back-btn .back-icon::before {
  display: none; /* 禁用伪元素，使用文字符号 */
  transform: translate(-50%, -50%) rotate(45deg);
  width: 16rpx;
  height: 16rpx;
  border-left: 3rpx solid #1D1D1F;
  border-bottom: 3rpx solid #1D1D1F;
  border-radius: 2rpx;
}

.header-title-row {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
}

.large-title {
  font-size: 60rpx;
  font-weight: 800;
  color: #1D1D1F;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
}

/* 管理员切换按钮 */
.admin-toggle-btn {
  display: inline-block;
  margin-left: 20rpx;
  font-size: 20rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  background: #F2F2F7;
  color: #8E8E93;
  border: 1rpx solid #E5E5EA;
  vertical-align: middle;
  transition: all 0.3s;
  font-weight: 600;
}

/* 开启状态的颜色 */
.admin-toggle-btn.on {
  background: #000;
  color: #fff;
  border-color: #000;
}

.subtitle {
  font-size: 26rpx;
  color: #86868B;
  margin-top: 10rpx;
  text-align: center;
}

.nav-right-placeholder {
  width: 64rpx;
  flex-shrink: 0;
}

/* 管理员功能区域（独立容器） */
.admin-actions-container {
  padding: 0 40rpx 20rpx 40rpx;
  background-color: #F2F2F7;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 退出管理员按钮 */
.exit-admin-btn {
  padding: 16rpx 32rpx;
  background: rgba(255, 59, 48, 0.1);
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
  border: 1rpx solid rgba(255, 59, 48, 0.3);
}

.exit-admin-btn:active {
  background: rgba(255, 59, 48, 0.2);
  transform: scale(0.98);
}

.exit-icon {
  font-size: 28rpx;
  color: #FF3B30;
  font-weight: 600;
}

.admin-badge {
  font-size: 20rpx;
  background: #FF3B30;
  color: #fff;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
  vertical-align: middle;
}

/* 管理员同步按钮 */
.sync-parts-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 16rpx 32rpx;
  background: #007AFF;
  color: #fff;
  border-radius: 50rpx;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.2s;
}

.sync-parts-btn:active {
  background: #0051D5;
  transform: scale(0.98);
}

.sync-icon {
  font-size: 28rpx;
}

.sync-text {
  font-size: 26rpx;
}

.section-title {
  padding: 40rpx 40rpx 20rpx 40rpx;
  font-size: 24rpx;
  font-weight: 700;
  color: #86868B;
  letter-spacing: 2rpx;
}

.card-grid {
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx;
  margin-bottom: 20rpx;
}

/* === 卡片核心样式修复 === */
.i-card {
  width: 48%;
  height: 320rpx;
  border-radius: 36rpx;
  position: relative; /* 关键：作为定位基准 */
  overflow: hidden;   /* 关键：切掉溢出的圆圈 */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.04);
}

/* 确保文字在圆圈上面 */
.card-top,
.card-btm {
  position: relative;
  z-index: 2; /* 文字层级高 */
}

/* 圆形装饰 */
.circle-decor {
  position: absolute;
  bottom: -40rpx;
  right: -40rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  z-index: 1; /* 在文字下面 */
}

/* 白色卡片 (PRO) 配色 */
.style-white {
  background: #FFFFFF;
  color: #000;
}
.style-white .badge {
  background: #F2F2F7;
  color: #666;
}
.style-white .circle-decor {
  background: #F2F2F7;
}

/* 黑色卡片 (MAX) 配色 */
.style-black {
  background: #1C1C1E;
  color: #FFF;
}
.style-black .badge {
  background: #333;
  color: #D1D1D6;
}
.style-black .p-desc {
  color: #888;
}
.style-black .circle-decor {
  background: #2C2C2E;
}

.badge {
  font-size: 20rpx;
  font-weight: 700;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}
.p-name {
  font-size: 36rpx;
  font-weight: 700;
}
.p-desc {
  font-size: 24rpx;
  margin-top: 6rpx;
  color: #86868B;
}

/* === 二级页面视图 === */
.detail-view {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: #FFFFFF;
  transform: translateX(100%);
  transition: transform 0.4s cubic-bezier(0.2, 0.8, 0.2, 1);
  z-index: 100;
  display: flex;
  flex-direction: column;
  overflow: hidden; /* 防止整体滚动 */
  box-sizing: border-box;
  /* padding-top 通过内联样式动态设置，使用 statusBarHeight */
  /* 高度会自动减去 padding-top，因为 box-sizing: border-box */
}

.detail-view.slide-in {
  transform: translateX(0);
}

.detail-nav {
  min-height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx 10rpx 30rpx; /* 增加顶部间距 */
  border-bottom: 1rpx solid #F2F2F7;
  background: rgba(255,255,255,0.95);
  position: relative;
  z-index: 999; /* 确保层级最高 */
  flex-shrink: 0; /* 防止被压缩 */
}
/* 返回按钮 - 仅图标 */
.nav-back-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.04);
  transition: all 0.2s;
  cursor: pointer;
}

.nav-back-btn:active {
  background: rgba(0, 0, 0, 0.08);
  transform: scale(0.96);
}

/* 返回箭头图标 - 统一使用文字符号 */
.back-icon {
  font-size: 48rpx;
  font-weight: 300;
  color: #000;
  line-height: 1;
  margin-left: -4rpx; /* 微调位置，让箭头更居中 */
}

.back-icon::before {
  display: none; /* 禁用伪元素，使用文字符号 */
}

.nav-title { 
  font-size: 32rpx; 
  font-weight: 700; 
  color: #1D1D1F;
}

.content-scroll {
  flex: 1;
  overflow-y: scroll;
  padding: 30rpx;
  padding-bottom: 200rpx; /* 为底部提交栏留出空间 */
  -webkit-overflow-scrolling: touch; /* iOS 平滑滚动 */
  height: 0; /* 关键：配合 flex: 1 使用，确保正确计算高度 */
  min-height: 0; /* 防止 flex 子元素溢出 */
}

