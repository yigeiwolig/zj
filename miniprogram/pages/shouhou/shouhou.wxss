.tab-group {
  display: flex;
  background: #F2F2F7;
  padding: 8rpx;
  border-radius: 24rpx;
  margin-bottom: 40rpx;
}
.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #86868B;
