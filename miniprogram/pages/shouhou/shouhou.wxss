}
/* 旧的 section-row / smart-paste 已被新的 contact-section 替代 */

/* 底部悬浮栏 (完全复用 shop 风格) */
.bottom-dock {
  position: fixed; 
  bottom: 0; 
  left: 0; 
  width: 100%;
  background: rgba(255,255,255,0.95); 
  backdrop-filter: blur(20px);
  padding: 20rpx 40rpx calc(60rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #eee; 
  display: flex; 
  align-items: center;
  justify-content: center;
  z-index: 200;
  box-sizing: border-box;
}

.footer-btn-group {
  width: 100%;
  display: flex; 
  gap: 20rpx;
  align-items: center;
}

/* 购物车按钮 (灰底黑字) */
.btn-cart {
  flex: 1; 
  background: #F5F5F7; 
  color: #000;
  height: 90rpx; 
  line-height: 90rpx; 
  text-align: center;
  border-radius: 45rpx; 
  font-weight: 700; 
  font-size: 28rpx;
  transition: all 0.1s ease;
}
.btn-cart:active {
  background: #E5E5E7;
  transform: scale(0.98);
}

/* 立即购买按钮 (黑底白字) */
.btn-buy {
  flex: 1; 
  background: #000; 
  color: #fff;
  height: 90rpx; 
  line-height: 90rpx; 
  text-align: center;
  border-radius: 45rpx; 
  font-weight: 700; 
  font-size: 28rpx;
  transition: all 0.1s ease;
}
.btn-buy:active {
  opacity: 0.9;
  transform: scale(0.98);
}

/* ================== 教程锁（修复版） ================== */
.lock-screen {
  text-align: center;
  padding: 60rpx 0;
  margin-top: 100rpx;
  position: relative;
  background: #fff;
  z-index: 10;
}
.dots-row {
  display: flex;
  justify-content: center;
  gap: 30rpx;
  margin: 60rpx 0;
}
.dot {
  width: 24rpx;
  height: 24rpx;
  background: #E5E5EA;
  border-radius: 50%;
  transition: all 0.2s;
}
.dot.filled {
  background: #000;
  transform: scale(1.2);
}
/* 修复密码输入框：彻底隐形 */
.hidden-input {
  position: absolute;
  top: 0; 
  left: 0;
  width: 200%; /* 放大一点防止点不到 */
  height: 100%;
  opacity: 0; /* 关键：完全透明 */
  z-index: 20;
  color: transparent; /* 文字透明 */
  background: transparent;
  text-indent: -999em; /* 把光标移出屏幕 */
  margin-left: -100%; /* 配合 width 防止撑开布局 */
}

/* === 视频教程列表 (大卡片风格) === */
.video-list-container {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  padding-bottom: 60rpx;
}

.video-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06);
  display: flex;
  flex-direction: column;
  position: relative;
  transition: box-shadow 0.2s, opacity 0.2s;
  /* 性能优化：启用硬件加速 */
  transform: translateZ(0);
  backface-visibility: hidden;
}

/* 拖拽中的卡片：移除 transition，让 translateY 立即响应 */
.video-card.dragging {
  transition: none !important;
  transform: translateZ(0) scale(1.02);
  box-shadow: 0 12rpx 32rpx rgba(0,0,0,0.15);
  z-index: 100;
  opacity: 0.95;
  border: 2rpx solid #007AFF;
  /* 性能优化：提示浏览器优化此元素的动画 */
  will-change: transform;
}

/* 拖拽结束后，卡片回到原位的动画 */
.video-card:not(.dragging) {
  transition: transform 0.3s ease-out, box-shadow 0.2s, opacity 0.2s;
}

/* 管理员模式下，视频卡片添加拖拽提示 */
.video-list-container .video-card {
  cursor: grab;
}

.video-list-container .video-card:active {
  cursor: grabbing;
}

.video-cover {
