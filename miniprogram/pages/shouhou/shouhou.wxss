}

/* 服务切换 */
.svc-switch {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}
.svc-item {
  flex: 1;
  text-align: center;
  padding: 30rpx;
  background: #F9F9F9;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: 4rpx solid transparent;
}
.svc-item.selected {
  background: #F0F8FF;
  border-color: #007AFF;
  color: #007AFF;
}

/* 配件网格 */
.section-label {
  font-size: 24rpx;
  color: #86868B;
  font-weight: 700;
  margin-bottom: 20rpx;
}
.parts-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}
.part-tag {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: #fff;
  border: 2rpx solid #eee;
  border-radius: 16rpx;
  width: 30%; /* 三列布局 */
