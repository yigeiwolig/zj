}
.del-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 32rpx;
  height: 32rpx;
  background: #FF3B30;
  color: #fff;
  border-radius: 50%;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.add-btn-dashed {
  padding: 20rpx 30rpx;
  border: 2rpx dashed #999;
  border-radius: 40rpx;
  color: #666;
  font-size: 24rpx;
}

/* 表单输入 */
.input-area {
  width: 100%;
  background: #F5F5F7;
  border-radius: 20rpx;
  padding: 30rpx;
  font-size: 30rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

/* === 联系信息板块 === */
.contact-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  margin-top: 30rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.03);
  padding: 30rpx;
}

/* 头部 */
.contact-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-label {
  font-size: 30rpx;
