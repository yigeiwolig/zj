.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(5px);
  z-index: 99999 !important; /* ç¡®ä¿åœ¨æœ€ä¸Šå±‚ï¼Œè¦†ç›–å¾®ä¿¡åŸç”Ÿæç¤º */
  display: flex;
  align-items: center;
  justify-content: center;
  animation: fadeIn 0.2s ease;
}

.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
}

.loader {
  width: 350rpx;
  height: 180rpx;
  border-radius: 20rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
  padding: 30rpx;
  box-shadow: 0 0 20rpx rgba(0,0,0,0.1);
}

.loading-bar {
  width: 100%;
  height: 20rpx;
  background: #E5E5EA;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
}
.loading-bar::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 50%;
  height: 100%;
  background: #1c1c1e;
  border-radius: 20rpx;
  animation: loadingBar 0.6s alternate infinite ease-in-out;
}
.loader-label {
  color: #1c1c1e;
  font-size: 28rpx;
  animation: labelBlink 0.6s alternate infinite;
}

@keyframes labelBlink {
  from { opacity: 0.3; }
  to   { opacity: 1; }
}
@keyframes loadingBar {
  0%   { left: 0%; }
  50%  { left: 25%; }
  100% { left: 50%; }
}

/* æ—§æ ·å¼å…¼å®¹ */
.loading-div {
  position: relative;
  max-width: 400rpx;
  width: 100%;
  height: 60rpx;
  background: linear-gradient(to right, white, black);
  background-size: 200% 100%;
  animation: gradientAnimation 10s linear infinite reverse;
  border-radius: 20rpx;
  box-shadow: 0 0 6rpx rgba(0, 0, 0, 0.3);
  -webkit-box-reflect: below 2rpx linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.4));
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.loading-text {
  color: white;
  color: #000;
  text-align: center;
  margin: 0;
  font-size: 24rpx;
  line-height: 60rpx;
  font-family: Arial, Helvetica, sans-serif;
  text-shadow: 0 0 6rpx rgba(255, 255, 255, 0.5);
  padding: 0;
  letter-spacing: 10rpx;
  font-weight: 600;
}

@keyframes gradientAnimation {
  0% {
    background-position: 0;
  }
  100% {
    background-position: 200% 0;
  }
}

/* å“åº”å¼é€‚é… */
