  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
  padding: 30rpx;
  box-shadow: 0 0 20rpx rgba(0,0,0,0.1);
}

.loading-bar {
  width: 100%;
  height: 20rpx;
  background: #E5E5EA;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
}
.loading-bar::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 50%;
  height: 100%;
  background: #1c1c1e;
  border-radius: 20rpx;
  animation: loadingBar 0.6s alternate infinite ease-in-out;
}
.loader-label {
  color: #1c1c1e;
  font-size: 28rpx;
  animation: labelBlink 0.6s alternate infinite;
}

@keyframes labelBlink {
  from { opacity: 0.3; }
  to   { opacity: 1; }
}
@keyframes loadingBar {
  0%   { left: 0%; }
  50%  { left: 25%; }
  100% { left: 50%; }
}
@keyframes fadeIn {
  from { opacity: 0; }
  to   { opacity: 1; }
}