  /* 将原来的 180rpx 减少到 20rpx，因为 step-view 已经添加了 padding-top */
  padding-top: 20rpx !important; 
}

/* 局部滚动区 */
.tutorial-scroll {
  flex: 1;
  height: 0; /* 必须设为0，由flex撑开 */
}

/* 顶部导航 */
.fixed-nav {
  position: fixed; top: 0; width: 100%; height: 160rpx;
  display: flex; justify-content: center; align-items: flex-end;
  padding: 0 48rpx 30rpx; z-index: 1000; background: rgba(255,255,255,0.8); backdrop-filter: blur(20px);
  box-sizing: border-box;
}

/* 顶部导航 */
