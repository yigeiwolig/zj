.custom-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(5px);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.custom-modal-box {
  background: #fff;
  width: 600rpx;
  border-radius: 40rpx;
  padding: 50rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
  animation: modalPopIn 0.2s ease-out;
}

@keyframes modalPopIn {
  from {
    transform: scale(0.9);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

.modal-title {
  font-size: 34rpx;
  font-weight: 800;
  margin-bottom: 40rpx;
  color: #1D1D1F;
}

.modal-input {
  background: #F5F5F7;
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  text-align: center;
  font-size: 32rpx;
  margin-bottom: 40rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.modal-btn-row {
  display: flex;
  gap: 30rpx;
  width: 100%;
}

.modal-btn {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 45rpx;
  font-weight: 600;
  font-size: 30rpx;
  transition: all 0.2s;
}

.modal-btn.cancel {
  background: #F5F5F7;
  color: #888;
}

.modal-btn.confirm {
  background: #000;
  color: #fff;
}

.modal-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}