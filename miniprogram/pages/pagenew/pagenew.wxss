page {
  background-color: #F5F6F8;
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  overflow: hidden; /* é˜²æ­¢é¡µé¢æ•´ä½“æ»šåŠ¨ */
}

.container {
  width: 100%; height: 100%;
  position: relative;
}

/* è¿”å›å›¾æ ‡ */
.back-icon {
  position: absolute;
  top: 80rpx;
  left: 40rpx;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  transition: all 0.3s ease;
}

.back-icon:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.8);
}

.back-icon-inner {
  width: 16rpx;
  height: 16rpx;
  border-left: 2.5rpx solid #333;
  border-bottom: 2.5rpx solid #333;
  transform: rotate(45deg);
  margin-left: 4rpx;
}

/* é¡¶éƒ¨ Header */
.header {
  height: 200rpx; padding-top: 100rpx;
  display: flex; flex-direction: column; align-items: center; justify-content: center;
  transition: 0.6s cubic-bezier(0.2, 0.8, 0.2, 1);
  z-index: 50; position: relative;
}
.header-title { font-size: 40rpx; font-weight: 800; color: #1d1d1f; letter-spacing: 2rpx; }
.header-subtitle { font-size: 20rpx; font-weight: 700; color: #999; letter-spacing: 4rpx; margin-top: 8rpx; }

/* ç®¡ç†å‘˜æ ‡è®° */
.admin-badge {
  position: absolute; top: 110rpx; right: 40rpx;
  background: #000; color: #fff; font-size: 20rpx; font-weight: bold;
  padding: 6rpx 12rpx; border-radius: 8rpx; opacity: 0; transition: 0.3s;
  z-index: 60;
}
.admin-badge.show { opacity: 1; }

/* === 1. é¦–é¡µå±‚ (Landing) === */
.landing-layer {
  position: absolute; top: 0; left: 0; width: 100%; height: 100%;
  display: flex; flex-direction: column;
  padding: 0 40rpx 80rpx; box-sizing: border-box;
  transition: 0.5s; z-index: 10;
}

.card-area {
  flex: 1; display: flex; flex-direction: column; justify-content: center;
}

/* åŠ¨ç”»å•å…ƒåŸºç¡€ç±» */
.anim-item { transition: 0.8s cubic-bezier(0.6, -0.28, 0.735, 0.045); }

/* å°é¢å›¾å®¹å™¨ */
.cover-box {
  width: 100%; aspect-ratio: 1/1;
  background: #fff; border-radius: 60rpx;
  box-shadow: 0 40rpx 80rpx rgba(0,0,0,0.06);
  position: relative; overflow: hidden; margin-bottom: 40rpx;
}
.cover-img { width: 100%; height: 100%; }

/* æ–‡æœ¬ */
.text-box { margin-bottom: 40rpx; padding: 0 20rpx; }
.p-title { font-size: 56rpx; font-weight: 800; color: #1d1d1f; display: block; margin-bottom: 16rpx; }
.p-desc { font-size: 28rpx; color: #86868b; line-height: 1.5; display: block; }

/* æŒ‰é’® */
.main-btn {
  height: 110rpx; width: 100%;
  background: linear-gradient(135deg, #fbaeb1 0%, #FF6B95 100%);
  border-radius: 40rpx; color: #fff; font-weight: 700; font-size: 32rpx; letter-spacing: 2rpx;
  display: flex; align-items: center; justify-content: center;
  box-shadow: 0 30rpx 60rpx rgba(255, 107, 149, 0.35);
}
.main-btn:active { transform: scale(0.96); }

/* === ğŸ’¥ æ¶ˆæ•£åŠ¨ç”» (Scatter Effect) === */
.landing-layer.scatter { pointer-events: none; }

/* Header é£èµ° */
.landing-layer.scatter .header { transform: translateY(-200rpx); opacity: 0; }
/* å°é¢å›¾ å·¦ä¸Šé£ */
.landing-layer.scatter .cover-box { transform: translate(-80rpx, -150rpx) scale(1.1) rotate(-5deg); opacity: 0; }
/* æ ‡é¢˜ å·¦é£ */
.landing-layer.scatter .p-title { transform: translateX(-150rpx); opacity: 0; transition-delay: 0.05s; }
/* æè¿° å³é£ */
.landing-layer.scatter .p-desc { transform: translateX(150rpx); opacity: 0; transition-delay: 0.1s; }
/* æŒ‰é’® ä¸‹æ²‰ */
.landing-layer.scatter .btn-box { transform: translateY(200rpx); opacity: 0; transition-delay: 0.15s; }


/* === 2. è¯¦æƒ…é¡µå±‚ (Detail) === */
.detail-layer {
  position: absolute; top: 0; left: 0; width: 100%; height: 100%;
  background: #fff; z-index: 20;
  opacity: 0; pointer-events: none;
  transform: scale(0.95); transition: all 0.6s cubic-bezier(0.2, 0.8, 0.2, 1);
}
.detail-layer.active { opacity: 1; pointer-events: auto; transform: scale(1); }

/* è¿”å›æŒ‰é’® */
.back-btn {
  position: fixed; top: 100rpx; left: 40rpx; width: 80rpx; height: 80rpx;
  background: rgba(0,0,0,0.05); border-radius: 50%; backdrop-filter: blur(10px);
  display: flex; align-items: center; justify-content: center; z-index: 100;
}
.icon-back { width: 24rpx; height: 24rpx; border-left: 4rpx solid #333; border-bottom: 4rpx solid #333; transform: rotate(45deg); margin-left: 6rpx; }

/* è¯¦æƒ…å†…å®¹ */
.detail-content { padding-top: 0; min-height: 100vh; padding-bottom: 200rpx; }
.detail-img { width: 100%; display: block; animation: fadeInUp 0.8s ease forwards; opacity: 0; transform: translateY(60rpx); }

@keyframes fadeInUp { to { opacity: 1; transform: translateY(0); } }

.footer-end { text-align: center; color: #ccc; font-size: 24rpx; padding: 60rpx 0; letter-spacing: 4rpx; }

/* === ç®¡ç†å‘˜æ§ä»¶æ ·å¼ === */
.admin-edit-btn {
  position: absolute; background: rgba(0,0,0,0.7); color: #fff; font-size: 24rpx; font-weight: bold;
  padding: 12rpx 24rpx; border-radius: 30rpx; z-index: 20; backdrop-filter: blur(4px);
}
.cover-pos { top: 30rpx; right: 30rpx; }

.admin-upload-bar {
  position: fixed; bottom: 60rpx; left: 0; width: 100%;
  display: flex; justify-content: center; gap: 20rpx; z-index: 100;
}
.upload-pill, .clear-pill {
  background: #1d1d1f; color: #fff; padding: 20rpx 40rpx; border-radius: 50rpx;
  font-size: 24rpx; font-weight: bold; box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.2);
}
.clear-pill { background: #ff3b30; }

/* === å¯†ç å¼¹çª— === */
.modal-mask {
  position: fixed; top: 0; left: 0; width: 100%; height: 100%;
  background: rgba(0,0,0,0.4); backdrop-filter: blur(8px);
  display: flex; justify-content: center; align-items: center;
  opacity: 0; pointer-events: none; transition: 0.3s; z-index: 200;
}
.modal-mask.active { opacity: 1; pointer-events: auto; }
.modal-box { width: 560rpx; background: #fff; border-radius: 40rpx; padding: 50rpx 40rpx; text-align: center; }
.modal-title { font-size: 28rpx; font-weight: 800; color: #333; letter-spacing: 2rpx; margin-bottom: 40rpx; }
.pwd-input { background: #F5F6F8; height: 100rpx; border-radius: 20rpx; text-align: center; font-size: 40rpx; margin-bottom: 40rpx; }
.modal-actions { display: flex; gap: 20rpx; }
.btn { flex: 1; height: 80rpx; display: flex; align-items: center; justify-content: center; border-radius: 20rpx; font-size: 28rpx; font-weight: bold; }
.btn.cancel { background: #f0f0f0; color: #999; }
.btn.confirm { background: #1d1d1f; color: #fff; }

/* Toast */
.toast {
  position: fixed; top: 180rpx; left: 50%; transform: translateX(-50%);
  background: rgba(0,0,0,0.8); color: #fff; padding: 16rpx 32rpx; border-radius: 40rpx;
  font-size: 24rpx; opacity: 0; transition: 0.3s; pointer-events: none; z-index: 300;
}
.toast.show { opacity: 1; top: 200rpx; }