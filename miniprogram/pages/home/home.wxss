/* 2. 确保内容区域是流式布局，能撑开高度 */
.p-content {
  /* 移除 flex: 1，防止它在 flex 容器中被压缩 */
  flex: none; 
  opacity: 0;
  transform: translateY(40rpx);
  transition: opacity 0.1s, transform 0.1s;
  
  background: #fff;
  position: relative;
  margin-top: -40rpx;
  border-top-left-radius: 48rpx;
  border-top-right-radius: 48rpx;
  
  /* 这里的 padding-bottom 决定了底部的留白，保持适中 */
  padding: 50rpx 40rpx 50rpx 40rpx; 
  box-sizing: border-box;
}
.phantom.expanded .p-content { opacity: 1; transform: translateY(0); transition: opacity 0.4s 0.2s, transform 0.4s 0.2s; }

/* 详情元素 */
.title-row { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 12rpx; }
.d-title { font-size: 48rpx; font-weight: 900; line-height: 1.1; color: #000; width: 70%; }
.d-dist-badge { background: #F5F5F7; padding: 12rpx 24rpx; border-radius: 24rpx; font-family: monospace; font-size: 32rpx; font-weight: 800; color: #000;}

.d-sub-row { display: flex; align-items: center; gap: 20rpx; margin-bottom: 40rpx; }
.status-pill { display: flex; align-items: center; gap: 12rpx; font-size: 24rpx; font-weight: 700; color: #333; background: rgba(0,200,83, 0.1); padding: 8rpx 20rpx; border-radius: 16rpx;}
.status-dot { width: 12rpx; height: 12rpx; border-radius: 50%; background: #00C853; }
.sub-text { font-size: 26rpx; color: #999; font-weight: 500; }

/* --- 2. 修改标签云：允许换行，撑开高度 --- */
/* 3. 标签云样式确认 (保持 flex-wrap: wrap) */
.tag-cloud {
  display: flex;
  flex-wrap: wrap; /* 确保换行 */
  gap: 16rpx;
  margin-bottom: 40rpx;
}

.srv-tag {
  /* 移除 flex-shrink，让它自然排列 */
  padding: 12rpx 24rpx;
  border: 1px solid #E5E5EA;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: #555;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

/* --- 3. 修改信息块：压缩内部间距 --- */
.info-block { 
  background: #F9F9F9; 
  border-radius: 32rpx; 
  padding: 32rpx; /* 减小内边距 */
  display: flex; 
  flex-direction: column; 
  /* 减小行与行之间的间距 */
  gap: 24rpx; 
}
.ib-row { display: flex; align-items: flex-start; gap: 32rpx; }
.ib-icon { width: 72rpx; height: 72rpx; background: #fff; border-radius: 20rpx; display: flex; align-items: center; justify-content: center; font-size: 36rpx; box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.03);}
.ib-content { flex: 1; }
.ib-label { font-size: 22rpx; font-weight: 700; color: #AAA; letter-spacing: 1rpx; margin-bottom: 8rpx; display: block; }
.ib-val { font-size: 30rpx; font-weight: 600; color: #333; line-height: 1.4; }

/* --- 4. 修改底部按钮：稍微紧凑一点 --- */
.d-footer { 
  margin-top: 30rpx; /* 拉近与上面的距离 */
  display: flex; 
  gap: 20rpx; 
  padding-bottom: 20rpx; 
}
.btn-nav { flex: 1; height: 112rpx; background: #000; color: #fff; border-radius: 56rpx; display: flex; align-items: center; justify-content: center; font-weight: 700; font-size: 32rpx; gap: 16rpx; box-shadow: 0 16rpx 40rpx rgba(0,0,0,0.2);}
.btn-call { width: 112rpx; height: 112rpx; background: #F2F2F7; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 40rpx;}
.del-btn { text-align: center; color: #FF3B30; font-size: 28rpx; font-weight: 600; padding: 20rpx; margin-bottom: 40rpx;}

/* 2. 修改浏览模式间距 */
.view-mode {
  /* 保持下沉感，但不要太多，40rpx 比较合适 */
  margin-top: 40rpx; 
}

/* 编辑表单 */
.edit-form {
  /* 如果觉得编辑模式也太靠上，可以把编辑表单也往下推 */
  margin-top: 60rpx;
  padding-bottom: 40rpx;
}

.edit-title { font-size: 40rpx; font-weight: 800; margin-bottom: 40rpx; }
.inp-group { margin-bottom: 30rpx; }
.inp-label { font-size: 24rpx; font-weight: 700; color: #888; margin-bottom: 12rpx; }
.inp-field { width: 100%; padding: 24rpx; background: #F2F2F7; border-radius: 24rpx; font-size: 32rpx; box-sizing: border-box; height: 90rpx; }
/* 位置选择样式 */
.pick-field { display: flex; justify-content: space-between; align-items: center; }
.pick-field.placeholder { color: #999; }
.save-btn { background: #007AFF; color: #fff; }

/* 服务选择器样式 */
.select-tag-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.select-tag {
  padding: 16rpx 24rpx;
  background: #fff;
  border: 1px solid #E5E5EA;
  border-radius: 16rpx;
  font-size: 26rpx;
  color: #999;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 8rpx;
  transition: all 0.2s;
}

/* 选中状态：变黑 */
.select-tag.active {
  background: #000;
  color: #fff;
  border-color: #000;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.2);
}

/* --- 修复滚动条丑陋的问题 --- */
.p-content::-webkit-scrollbar {
  display: none; /* 隐藏滚动条 */
  width: 0;
  height: 0;
  color: transparent;
}

/* --- 编辑模式：全居中风格 --- */

/* 1. 标题居中 */
.edit-title {
  text-align: center;
  font-size: 44rpx; /* 稍微加大 */
  margin-bottom: 50rpx;
}

/* 2. 输入框组居中 */
.edit-form .inp-group {
  display: flex;
  flex-direction: column;
  align-items: center; /* 让子元素水平居中 */
  margin-bottom: 40rpx;
}

/* 3. 标签文字居中 */
.edit-form .inp-label {
  text-align: center;
  width: 100%;
  font-size: 26rpx;
  letter-spacing: 2rpx;
  margin-bottom: 16rpx;
}

/* 4. 输入框本体居中 */
.edit-form .inp-field {
  text-align: center; /* 文字居中输入 */
  background: #F7F8FA; /* 稍微淡一点的背景 */
  border-radius: 20rpx;
  height: 100rpx; /* 增高一点，更大气 */
  font-weight: 600;
  font-size: 34rpx;
  color: #000;
}

/* 5. 地址选择器特殊处理 */
.edit-form .pick-field {
  justify-content: center; /* 内容居中 */
  gap: 10rpx;
}

/* 6. 服务标签选择区居中 */
.select-tag-grid {
  justify-content: center; /* 标签整体居中 */
}

/* 7. 保存按钮微调 */
.save-btn {
  margin-top: 40rpx;
  width: 80%; /* 按钮不要太宽 */
  margin-left: auto;
  margin-right: auto;
  box-shadow: 0 10rpx 30rpx rgba(0,122,255,0.3);
}

/* --- 自定义认证弹窗 --- */
.auth-mask {
  position: fixed; inset: 0; z-index: 5000;
  background: rgba(0,0,0,0.6); backdrop-filter: blur(10px);
  display: flex; align-items: center; justify-content: center;
  animation: fadeIn 0.2s ease-out;
}

.auth-box {
  width: 600rpx;
  background: #FFFFFF;
  border-radius: 60rpx; /* 大圆角 */
  padding: 60rpx 50rpx;
  display: flex; flex-direction: column; align-items: center;
  box-shadow: 0 40rpx 100rpx rgba(0,0,0,0.3);
  transform: scale(0.9);
  animation: popUp 0.3s cubic-bezier(0.19, 1, 0.22, 1) forwards;
}

.auth-title { font-size: 36rpx; font-weight: 900; letter-spacing: 2rpx; color: #000; margin-bottom: 10rpx; }
.auth-sub { font-size: 24rpx; color: #999; margin-bottom: 50rpx; }

/* 长椭圆输入框核心样式 */
.auth-input {
  width: 100%;
  height: 110rpx;
  background: #F2F2F7;
  border-radius: 55rpx; /* 高度的一半，形成完全椭圆 */
  text-align: center;   /* 文字居中 */
  font-size: 40rpx;
  font-weight: 800;
  letter-spacing: 8rpx; /* 密码圆点间距大一点更好看 */
  color: #000;
  margin-bottom: 50rpx;
}

.input-ph { color: #CCC; font-weight: 600; letter-spacing: 2rpx; font-size: 28rpx; }

.auth-btns { width: 100%; display: flex; gap: 30rpx; }
.auth-btn {
  flex: 1; height: 96rpx; border-radius: 48rpx;
  display: flex; align-items: center; justify-content: center;
  font-weight: 700; font-size: 30rpx;
}
.auth-btn.cancel { background: #F5F5F5; color: #999; }
.auth-btn.confirm { background: #000; color: #fff; box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.2); }

@keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
@keyframes popUp { from { transform: scale(0.9); opacity: 0; } to { transform: scale(1); opacity: 1; } }

/* 时间选择器样式 */
.time-picker-row {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  width: 100%;
}

.time-box {
  background: #F7F8FA;
  padding: 24rpx 40rpx;
  border-radius: 20rpx;
  font-size: 36rpx;
  font-weight: 800;
  color: #000;
  min-width: 160rpx;
  text-align: center;
  border: 1px solid #E5E5EA;
}

.time-split {
  font-weight: 900;
  color: #ccc;
  font-size: 40rpx;
}