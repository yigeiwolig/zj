/* 全局背景 */
page {
  background-color: #F9F9F9;
  height: 100%;
  overflow: hidden;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
}

/* 顶部导航 */
.header {
  position: absolute;
  top: 0;
  width: 100%;
  height: 180rpx; /* 包含状态栏高度 */
  padding-top: 80rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 100;
  pointer-events: none; /* 让点击穿透 */
}

.back-icon {
  width: 24rpx;
  height: 24rpx;
  border-left: 4rpx solid #333;
  border-bottom: 4rpx solid #333;
  transform: rotate(45deg);
}

.header-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #999;
  letter-spacing: 2rpx;
}

/* Swiper 容器 */
.card-swiper {
  width: 100%;
  height: 100vh; /* 占满全屏 */
}

.card-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 卡片基础样式 */
.card {
  width: 600rpx;
  height: 260rpx;
  background: #FFFFFF;
  border-radius: 40rpx; /* 大圆角 */
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 50rpx;
  box-sizing: border-box;
  
  /* 默认状态：缩小、半透明 */
  transform: scale(0.7);
  opacity: 0.7;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.08);
  
  /* 极其丝滑的过渡动画 */
  transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
}

/* --- 激活状态 (屏幕中间) --- */
.card.active {
  transform: scale(1.05); /* 稍微放大，凸显 */
  opacity: 1;
  /* 浮起的高级投影 */
  box-shadow: 0 40rpx 80rpx -20rpx rgba(0, 0, 0, 0.2);
  z-index: 10;
}

/* 文字排版 */
.card-text .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1d1d1f;
  margin-bottom: 10rpx;
}

.card-text .subtitle {
  font-size: 24rpx;
  color: #86868b;
}

/* 图标容器 */
.icon-box {
  width: 100rpx;
  height: 100rpx;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.3s ease;
}

/* 黑球样式 (CSS绘制) */
.black-ball {
  width: 50rpx;
  height: 50rpx;
  background: radial-gradient(circle at 30% 30%, #555, #000);
  border-radius: 50%;
  box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.3);
}

