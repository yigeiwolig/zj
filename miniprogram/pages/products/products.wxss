.products-page .subtitle {
  color: #6b768d;
  font-size: 26rpx;
}

.product-card {
  padding: 0;
  overflow: hidden;
}

.product-cover {
  width: 100%;
  height: 320rpx;
}

.product-body {
  padding: 32rpx;
}

.title-row {
  margin-bottom: 12rpx;
}

.product-title {
  font-size: 36rpx;
  font-weight: 700;
  display: block;
}

.product-subtitle {
  color: #6b768d;
  font-size: 26rpx;
}

.tag-row {
  margin: 12rpx 0 20rpx;
}

.tag {
  display: inline-block;
  padding: 8rpx 20rpx;
  background: rgba(11, 95, 255, 0.1);
  color: #0b5fff;
  border-radius: 999rpx;
  margin-right: 12rpx;
  font-size: 24rpx;
}

.description {
  display: block;
  color: #4a5466;
  line-height: 1.5;
  margin-bottom: 24rpx;
}

.empty-state {
  text-align: center;
  color: #8a94a7;
  padding: 80rpx 0;
}

