/* ================= 自动消失提示（无按钮，2秒后自动消失） ================= */
.auto-toast-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0);
  z-index: 99999;
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: none;
}

.auto-toast-box {
  background: rgba(0, 0, 0, 0.75);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 24rpx 40rpx;
  max-width: 600rpx;
  text-align: center;
  animation: toastFadeIn 0.3s ease-out;
  pointer-events: auto;
}

@keyframes toastFadeIn {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.at-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 8rpx;
}

.at-content {
  font-size: 26rpx;
  color: #FFFFFF;
  opacity: 0.9;
  line-height: 1.5;
}

/* ================= 全局背景 (完全恢复原版) ================= */
page {
  /* 
     原版对称微蓝渐变：
     顶部纯白 -> 中间科技蓝 -> 底部纯白 
  */
  background: linear-gradient(180deg, 
    #FFFFFF 0%,
    #FFFFFF 10%,
    #F6F8FB 25%,
    #E5EEF8 45%,
    #D8E7F6 60%,
    #EEF4FA 80%,
    #FFFFFF 100%
  );
  
  height: 100%;
  overflow: hidden; 
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
}

/* 顶部导航 */
.header {
  position: fixed; top: 0; left: 0; right: 0; height: 180rpx;
  padding-top: 80rpx; padding-left: 40rpx; padding-right: 40rpx;
  box-sizing: border-box; display: flex; justify-content: space-between; align-items: center;
  z-index: 10000; pointer-events: none;
  background: transparent; 
}
.back-icon {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: auto;
  transition: all 0.2s;
  font-size: 52rpx;
  font-weight: 300;
  color: #000;
  line-height: 1;
}
.back-icon:active {
  transform: scale(0.95);
  opacity: 0.7;
}
.back-icon::before {
  display: none;
}

/* 容器 */
.container { width: 100%; height: 100vh; position: relative; }

/* ================= 卡片通用样式 (恢复极致玻璃质感) ================= */
.card {
  position: absolute;
  left: 50%; margin-left: -310rpx;
  width: 620rpx; height: 260rpx;
  
  /* 
     === 恢复重点：原来的透明渐变 ===
     左右两边透，中间微亮
  */
  background: linear-gradient(
    90deg, 
    rgba(255, 255, 255, 0.15) 0%, 
    rgba(255, 255, 255, 0.2) 50%,
    rgba(255, 255, 255, 0.15) 100%
  );
  
  /* 强力磨砂模糊 */
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  
  /* 边框：半透明白边 */
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 44rpx;
  
  box-sizing: border-box;
  
  /* 投影：原来的柔和阴影 */
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.05);
  
  /* 动画设置 */
  will-change: transform, opacity;
}

/* 当前选中项 (Current) - 高亮玻璃 */
.card.curr {
  z-index: 100;
  
  /* 选中时更亮、更透 */
  background: linear-gradient(
    90deg, 
    rgba(255, 255, 255, 0.25) 0%, 
    rgba(255, 255, 255, 0.35) 50%,
    rgba(255, 255, 255, 0.25) 100%
  );
  
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  
  /* 投影加深 */
  box-shadow: 
    0 20rpx 50rpx -10rpx rgba(0, 0, 0, 0.1), 
    inset 0 0 20rpx rgba(255, 255, 255, 0.5); 
}

/* ================= 内部布局 (使用刚才修正的绝对定位) ================= */
/* 这里的布局逻辑是新的（修正位置），但样式是旧的（透明背景） */

.card-inner {
  width: 100%; height: 100%;
  position: relative; /* 设为原点 */
}

/* 1. 文字：绝对定位到左上角 */
.card-info {
  position: absolute;
  top: 60rpx;   /* 距离顶部 50rpx，往下移动一点点 */
  left: 40rpx;  /* 距离左边 50rpx */
  display: flex; 
  flex-direction: column;
  z-index: 2;
}

.card-title { 
  font-size: 40rpx; 
  font-weight: 800; 
  color: #333; 
  margin-bottom: 8rpx; 
}
.card-sub { 
  font-size: 20rpx; 
  font-weight: 700; 
  color: #556677; /* 恢复稍微深一点的灰色，防止在玻璃背景上看不清 */
  letter-spacing: 2rpx; 
  text-transform: uppercase; 
}

/* 2. 图标：绝对定位到垂直居中偏右 */
.icon-container {
  position: absolute;
  right: 10rpx;   /* 靠右，往右移动一点点 */
  top: 50%;       /* 垂直居中 */
  transform: translateY(-50%); 
  
  width: 150rpx; height: 150rpx; /* 放大一点点 */
  background: #fff; /* 图标底座保持纯白，突出质感 */
  border-radius: 44rpx;
  display: flex; justify-content: center; align-items: center;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.06);
}

.svg-icon { width: 90rpx; height: 90rpx; /* 放大一点点 */ }

/* ================= 自定义加载动画 ================= */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(5px);
  z-index: 99999 !important; /* 确保在最上层，覆盖微信原生提示 */
  display: flex;
  align-items: center;
  justify-content: center;
  animation: fadeIn 0.2s ease;
}

.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
}

.loader {
  width: 350rpx;
  height: 180rpx;
  border-radius: 20rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
  padding: 30rpx;
  box-shadow: 0 0 20rpx rgba(0,0,0,0.1);
}

.loading-bar {
  width: 100%;
  height: 20rpx;
  background: #E5E5EA;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
}
.loading-bar::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 50%;
  height: 100%;
  background: #1c1c1e;
  border-radius: 20rpx;
  animation: loadingBar 0.6s alternate infinite ease-in-out;
}
.loader-label {
  color: #1c1c1e;
  font-size: 28rpx;
  animation: labelBlink 0.6s alternate infinite;
}

@keyframes labelBlink {
  from { opacity: 0.3; }
  to   { opacity: 1; }
}
@keyframes loadingBar {
  0%   { left: 0%; }
  50%  { left: 25%; }
  100% { left: 50%; }
}
@keyframes fadeIn {
  from { opacity: 0; }
  to   { opacity: 1; }
}
