}
@keyframes toastFadeIn {
  from {
    opacity: 0;
    transform: translateY(-20rpx) scale(0.92);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}
@keyframes autoToastShrinkOut {
  0% {
    transform: scale(1) translateY(0);
    opacity: 1;
    filter: blur(0);
  }
  100% {
    transform: scale(0.6) translateY(-60rpx);
    opacity: 0;
    filter: blur(12rpx);
  }
}

