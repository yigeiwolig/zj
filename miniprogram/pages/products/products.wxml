<!-- 顶部自定义导航栏模拟 -->
<view class="header">
  <view class="back-icon"></view>
  <text class="header-title">mm</text>
  <view style="width: 24rpx;"></view> <!-- 占位 -->
</view>

<!-- 核心区域：垂直轮播 -->
<swiper 
  class="card-swiper" 
  vertical="true" 
  previous-margin="20rpx" 
  next-margin="20rpx" 
  bindchange="onSwiperChange"
  circular="false"
>
  <block wx:for="{{list}}" wx:key="id">
    <swiper-item class="card-wrapper">
      <!-- 卡片本体：如果当前索引(currentIndex)等于这个卡片的索引，就添加 active 类 -->
      <view class="card {{currentIndex === index ? 'active' : ''}}">
        
        <!-- 左侧文字 -->
        <view class="card-text">
          <view class="title">{{item.title}}</view>
          <view class="subtitle">{{item.desc}}</view>
        </view>

        <!-- 右侧图标/图形 -->
        <view class="icon-box" style="background: {{currentIndex === index ? item.activeColor : item.bgColor}}">
          <!-- 特殊处理：如果是第一个，显示黑球 -->
          <block wx:if="{{index === 0}}">
            <view class="black-ball"></view>
          </block>
          <!-- 其他显示 Emoji 或 图标图片 -->
          <block wx:else>
            <text style="color: {{currentIndex === index ? '#fff' : item.iconColor}}; font-size: 40rpx;">{{item.icon}}</text>
          </block>
        </view>

      </view>
    </swiper-item>
  </block>
</swiper>

