.admin-toggle-btn {
  display: inline-block;
  margin-left: 20rpx;
  font-size: 20rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  background: #F2F2F7;
  color: #8E8E93;
  border: 1rpx solid #E5E5EA;
  vertical-align: middle;
  transition: all 0.3s;
  font-weight: 600;
}

/* å¼€å¯çŠ¶æ€çš„é¢œè‰² */
.admin-toggle-btn.on {
  background: #000;
