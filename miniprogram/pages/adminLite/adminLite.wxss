.empty-state {
  text-align: center;
  padding: 60rpx;
  color: #999;
  font-size: 28rpx;
}

.card {
  background: #fff;
  border-radius: 30rpx;
  padding: 40rpx;
  margin: 30rpx;
  box-shadow: 0 10rpx 40rpx rgba(0,0,0,0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 800;
  margin-bottom: 30rpx;
  color: #1D1D1F;
}

.form-group {
  margin-bottom: 28rpx;
}

.label {
  display: block;
  margin-bottom: 12rpx;
  color: #516079;
}

input,
textarea {
  width: 100%;
  padding: 20rpx;
  background: #f7f9fc;
  border-radius: 16rpx;
  box-sizing: border-box;
}

textarea {
  min-height: 160rpx;
}

.summary {
  display: block;
  margin-bottom: 8rpx;
  color: #666;
  font-size: 26rpx;
}

.cta-btn {
  width: 100%;
  padding: 24rpx;
  background: #0071E3;
  color: #fff;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 700;
  margin-top: 20rpx;
}

