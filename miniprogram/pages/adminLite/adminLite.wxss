.pwd-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  visibility: hidden;
  opacity: 0;
  transition: 0.3s;
}

.pwd-mask.active {
  visibility: visible;
  opacity: 1;
}

.pwd-box {
  background: #fff;
  padding: 60rpx;
  border-radius: 40rpx;
  width: 600rpx;
  text-align: center;
}

.pwd-tit {
  font-weight: 800;
  font-size: 36rpx;
  margin-bottom: 40rpx;
}

.pwd-input {
  border: 2rpx solid #e5e5ea;
  height: 90rpx;
  border-radius: 45rpx;
  margin-bottom: 40rpx;
  text-align: center;
  font-size: 40rpx;
  letter-spacing: 5rpx;
}

.pwd-cancel,
.pwd-confirm {
  margin-top: 30rpx;
  color: #888;
  font-size: 26rpx;
  display: inline-block;
  padding: 20rpx 40rpx;
  margin: 0 10rpx;
  border-radius: 20rpx;
  background: #f5f5f7;
}

.pwd-confirm {
  background: #0071E3;
  color: #fff;
}

