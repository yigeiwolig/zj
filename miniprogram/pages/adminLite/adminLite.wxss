  border-color: #000;
}

.page-title {
  font-size: 36rpx;
  font-weight: 800;
  color: #1D1D1F;
}

.admin-exit-btn {
  padding: 10rpx 20rpx;
  background: #0071E3;
  color: #fff;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.product-scroll {
  height: calc(100vh - 200rpx);
  padding: 30rpx;
}

.product-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.product-card {
  background: #fff;
  border-radius: 30rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 40rpx rgba(0,0,0,0.05);
  position: relative;
  transition: 0.2s;
}

.product-card:active {
  transform: scale(0.98);
}

.product-cover-wrapper {
  position: relative;
  width: 100%;
  height: 400rpx;
  overflow: hidden;
}

.product-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.product-info {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1D1D1F;
}

.product-price {
  font-size: 28rpx;
  font-weight: 600;
  color: #0071E3;
}

