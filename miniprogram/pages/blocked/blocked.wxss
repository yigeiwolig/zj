/* miniprogram/pages/blocked/blocked.wxss */
page {
  background-color: #ffffff;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 60rpx;
  /* 保持之前的下移调整 */
  padding-top: 300rpx; 
  box-sizing: border-box;
  height: 100vh;
  position: relative;
}

/* 浅灰色圆形底托 */
.icon-box {
  width: 200rpx;
  height: 200rpx;
  background: #f5f5f5;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 40rpx;
}

/* 盾牌图标 */
.shield-icon {
  width: 120rpx;
  height: 120rpx;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #000000;
  margin-bottom: 20rpx;
}

.desc {
  color: #666666;
  font-size: 28rpx;
  line-height: 1.6;
  text-align: center;
  margin-bottom: 80rpx;
}

.btn-area {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.copy-btn {
  background-color: #07C160 !important; /* 微信官方绿色 */
  color: #ffffff !important;
  width: 100% !important;
  border-radius: 100rpx;
  font-size: 30rpx;
  font-weight: 500;
  padding: 24rpx 0;
  box-shadow: 0 8rpx 20rpx rgba(7, 193, 96, 0.3); /* 微信绿色阴影 */
}

.btn-hover {
  background-color: #06ad56 !important; /* 微信绿色按下状态 */
  transform: scale(0.98);
}

.tips {
  margin-top: 30rpx;
  font-size: 24rpx;
  color: #999999;
}

.loading-area {
  position: absolute;
  bottom: 80rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #cccccc;
  gap: 10rpx;
}

.status-dot {
  width: 10rpx;
  height: 10rpx;
  background-color: #cccccc;
  border-radius: 50%;
  animation: breathe 2s infinite ease-in-out;
}

@keyframes breathe {
  0% { opacity: 0.3; }
  50% { opacity: 1; }
  100% { opacity: 0.3; }
}

/* ================= 自定义"内容已复制"弹窗 - 白底黑字样式 ================= */
.custom-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(10px);
  z-index: 99999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.custom-modal-box {
  width: 620rpx;
  background: #ffffff;
  border-radius: 48rpx;
  padding: 70rpx 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 40rpx 80rpx rgba(0, 0, 0, 0.2);
  transform: scale(0.8);
  opacity: 0;
  animation: blockedSpringPop 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
}

@keyframes blockedSpringPop {
  to {
    transform: scale(1);
    opacity: 1;
  }
}

.copy-success-modal {
  width: 400rpx !important;
  padding: 60rpx 40rpx !important;
  min-height: auto;
}

.copy-success-modal .modal-icon-new {
  width: 80rpx !important;
  height: 80rpx !important;
  margin-bottom: 30rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  font-size: 60rpx !important;
  font-weight: 900 !important;
  color: #000000 !important;
  line-height: 1 !important;
  opacity: 1 !important;
  animation: checkmarkPop 0.3s cubic-bezier(0.34, 1.56, 0.64, 1) forwards !important;
}

@keyframes checkmarkPop {
  from {
    transform: scale(0) rotate(-180deg);
    opacity: 0;
  }
  to {
    transform: scale(1) rotate(0deg);
    opacity: 1;
  }
}

.copy-success-modal .modal-title-new {
  font-size: 36rpx !important;
  margin-bottom: 0 !important;
  letter-spacing: 0 !important;
  font-weight: 600 !important;
  color: #000000 !important;
}