<!-- miniprogram/pages/blocked/blocked.wxml -->
<view class="container">
  
  <!-- 图标区域 -->
  <view class="icon-box">
    <image class="shield-icon" src="data:image/svg+xml;base64," mode="aspectFit"></image>
  </view>
  
  <view class="title">访问受限</view>
  
  <view class="desc">
    <view>为了防止恶意攻击服务器</view>
    <view>请联系管理员录入信息</view>
  </view>

  <view class="btn-area">
    <button class="copy-btn" hover-class="btn-hover" bindtap="handleCopyWechat">
      联系管理员开通
    </button>
    <view class="tips">点击按钮复制微信号，进行人工核验</view>
  </view>

  <!-- 底部状态栏 -->
  <view class="loading-area">
    <view class="status-dot"></view>
    <text>正在云端校验权限...</text>
  </view>
</view>

<!-- 自定义"内容已复制"弹窗（白底黑字样式） -->
<view class="custom-modal-mask" wx:if="{{showCopySuccessModal}}">
  <view class="custom-modal-box copy-success-modal">
    <view class="modal-icon-new success-icon">✓</view>
    <view class="modal-title-new">内容已复制</view>
  </view>
</view>

<!-- 【新增】自定义成功提示弹窗 - 白底黑字样式 -->
<view class="custom-modal-mask" wx:if="{{showCustomSuccessModal}}">
  <view class="custom-modal-box success-modal">
    <!-- 图标：使用 Unicode 字符 -->
    <view class="modal-icon-new success-icon">✓</view>
    <!-- 标题 -->
    <view class="modal-title-new">{{successModalTitle}}</view>
    <!-- 内容（如果有） -->
    <view class="modal-content-new" wx:if="{{successModalContent}}">
      <view class="content-main">{{successModalContent}}</view>
    </view>
  </view>
</view>

<!-- 全局自定义弹窗组件 -->
<custom-toast id="custom-toast" />
