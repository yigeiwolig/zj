<!-- miniprogram/pages/blocked/blocked.wxml -->
<view class="container">
  
  <!-- 图标区域 -->
  <view class="icon-box">
    <image class="shield-icon" src="data:image/svg+xml;base64," mode="aspectFit"></image>
  </view>
  
  <view class="title">访问受限</view>
  
  <view class="desc">
    <view>为了防止恶意攻击服务器</view>
    <view>请联系管理员录入信息</view>
  </view>

  <view class="btn-area">
    <button class="copy-btn" hover-class="btn-hover" bindtap="handleCopyWechat">
      联系管理员开通
    </button>
    <view class="tips">点击按钮复制微信号，进行人工核验</view>
  </view>

  <!-- 底部状态栏 -->
  <view class="loading-area">
    <view class="status-dot"></view>
    <text>正在云端校验权限...</text>
  </view>
</view>