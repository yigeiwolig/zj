/* pages/shop/shop.wxss */
page {
  background-color: #F5F5F7;
  color: #1D1D1F;
  font-family: -apple-system, "SF Pro Display", sans-serif;
  height: 100%;
  overflow: hidden; 
}

/* ============ 通用组件 ============ */
.btn-black {
  background: #000; color: #fff; font-weight: 600; padding: 24rpx 40rpx;
  border-radius: 60rpx; font-size: 30rpx; text-align: center;
}
.btn-black.full { width: 100%; box-sizing: border-box; }
.editable { border-bottom: 2rpx dashed #999; display: inline-block; min-width: 40rpx; }

/* ============ 1. 顶部导航 ============ */
.nav-header {
  position: absolute; top: 0; left: 0; width: 100%; height: 180rpx;
  display: flex; align-items: flex-end; justify-content: space-between;
  padding: 0 40rpx 20rpx; box-sizing: border-box;
  background: rgba(245,245,247,0.9); backdrop-filter: blur(20px); z-index: 100;
}
.nav-left {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.nav-back-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}
.icon-back {
  font-size: 60rpx;
  font-weight: 300;
  color: #000;
  padding-bottom: 10rpx;
}
.brand-title { 
  font-size: 38rpx; 
  font-weight: 800; 
  flex: 1;
  text-align: center;
}
.admin-badge { background: #000; color: #fff; font-size: 18rpx; padding: 6rpx 10rpx; border-radius: 8rpx; }

/* ============ 2. 主页面 ============ */
.main-scroll { height: 100vh; padding-top: 180rpx; box-sizing: border-box; }

/* Hero 轮播 */
.hero-swiper-box { height: 500rpx; width: 100%; background: #000; position: relative; margin-bottom: 40rpx; }
.hero-swiper, .hero-media { width: 100%; height: 100%; object-fit: cover; }
.admin-del-media { position: absolute; top: 20rpx; right: 20rpx; background: red; color: #fff; width: 50rpx; height: 50rpx; border-radius: 50%; text-align: center; line-height: 50rpx; }

/* Admin: 左右分开的上传按钮 */
.admin-upload-row {
  position: absolute; bottom: 30rpx; right: 30rpx;
  display: flex; gap: 20rpx; z-index: 20;
}
.up-btn {
  background: rgba(255,255,255,0.95); color: #000;
  padding: 12rpx 24rpx; border-radius: 40rpx;
  font-size: 24rpx; font-weight: 600;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.2);
}

/* 产品列表 (单列大卡片) */
.product-list { padding: 0 30rpx; display: flex; flex-direction: column; gap: 40rpx; }
.prod-card {
  background: #fff; border-radius: 30rpx; overflow: hidden;
  box-shadow: 0 10rpx 40rpx rgba(0,0,0,0.05); position: relative;
  transition: 0.2s;
}
.prod-card:active { transform: scale(0.98); }
.product-cover-wrapper {
  position: relative;
  width: 100%;
  height: 400rpx;
}
.p-img { width: 100%; height: 400rpx; object-fit: cover; }
.p-info { padding: 40rpx; }
.p-row { display: flex; justify-content: space-between; font-weight: 700; font-size: 34rpx; }
.add-series-btn { text-align: center; padding: 60rpx; border: 4rpx dashed #ccc; border-radius: 30rpx; color: #999; font-weight: 600; }
.admin-float { position: absolute; top: 20rpx; right: 20rpx; width: 60rpx; height: 60rpx; background: rgba(0,0,0,0.5); color: #fff; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 24rpx; z-index: 15; }
/* 跳转号码标识 */
.jump-number-badge {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 28rpx;
  font-weight: 700;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  z-index: 20;
  pointer-events: auto;
  backdrop-filter: blur(10px);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.3);
}

/* ============ 3. 产品详情全屏弹窗 ============ */
.full-modal { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: #fff; z-index: 200; display: flex; flex-direction: column; transform: translateY(100%); transition: 0.4s cubic-bezier(0.19, 1, 0.22, 1); }
.full-modal.active { transform: translateY(0); }
.modal-nav { height: 180rpx; padding: 0 30rpx 20rpx; display: flex; align-items: flex-end; justify-content: space-between; border-bottom: 1rpx solid #eee; flex-shrink: 0; }
.nav-close { font-size: 44rpx; padding: 10rpx; color: #888; }
.modal-title { font-weight: 700; font-size: 32rpx; }

.modal-scroll { flex: 1; overflow-y: scroll; background: #fff; position: relative; z-index: 1; }
.scroll-inner { padding-bottom: 50rpx; }
/* 确保 scroll-view 不会覆盖底部按钮 */
.modal-scroll {
  padding-bottom: 0;
  margin-bottom: 0;
}
.detail-images { margin-bottom: 40rpx; }
.dimg-box { position: relative; }
.dimg { width: 100%; display: block; }
.admin-del-abs { position: absolute; top: 20rpx; right: 20rpx; background: red; color: #fff; width: 50rpx; height: 50rpx; border-radius: 50%; text-align: center; line-height: 50rpx; }
.add-txt-btn { text-align: center; padding: 40rpx; color: #0071E3; font-weight: 600; font-size: 26rpx; }

/* 选购配置 Header */
.config-sec { padding: 0 40rpx; }
.sec-header-row { display: flex; justify-content: space-between; align-items: center; margin: 60rpx 0 30rpx; }
.sec-title { font-size: 34rpx; font-weight: 800; margin: 0; }
/* 修改 2：参数对比按钮改成纯黑色，简约风格 */
.btn-compare {
  background: #000000;  /* 纯黑背景 */
  color: #ffffff;       /* 白色文字 */
  font-size: 26rpx;
  padding: 12rpx 30rpx;
  border-radius: 40rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.2);
}
.cfg-group { margin-bottom: 60rpx; }
.cfg-label { font-size: 24rpx; color: #86868b; font-weight: 600; margin-bottom: 20rpx; }

/* 型号列表 */
.model-item { padding: 30rpx; border: 2rpx solid #eee; border-radius: 16rpx; margin-bottom: 20rpx; display: flex; justify-content: space-between; align-items: center; position: relative; }
.model-item.selected { border-color: #0071E3; background: rgba(0,113,227,0.03); }
.m-name { font-weight: 600; font-size: 30rpx; }
.m-desc { font-size: 24rpx; color: #888; display: block; margin-top: 6rpx; }
.m-price { font-weight: 600; }
/* 修改 1：加大管理员删除按钮的间距，防止点错 */
.admin-del-mini {
  position: absolute;
  top: 0;           /* 贴顶 */
  right: 0;         /* 贴右 */
  padding: 20rpx;   /* 增加点击范围（关键）*/
  color: red;
  font-size: 28rpx;
  z-index: 10;      /* 确保在最上层 */
  font-weight: bold;
}

/* 选项 Grid (图上字下) */
.opt-grid { display: flex; flex-wrap: wrap; gap: 20rpx; }
.opt-card { width: 30%; flex-grow: 1; border: 2rpx solid #eee; border-radius: 16rpx; position: relative; overflow: hidden; display: flex; flex-direction: column; align-items: center; text-align: center; }
.opt-card.selected { border-color: #0071E3; background: rgba(0,113,227,0.03); }
.opt-img { width: 100%; height: 160rpx; background: #f0f0f0; object-fit: cover; }
.opt-info { padding: 20rpx 10rpx; width: 100%; box-sizing: border-box; }
.opt-name { font-size: 26rpx; font-weight: 600; display: block; }
.opt-sub { font-size: 22rpx; color: #666; }
.admin-add-icon { position: absolute; top: 10rpx; right: 10rpx; font-size: 20rpx; background: #eee; padding: 6rpx; border-radius: 6rpx; }
.admin-del-corner { position: absolute; bottom: 0; right: 0; background: red; color: #fff; font-size: 18rpx; padding: 4rpx 10rpx; border-top-left-radius: 10rpx; }
.opt-card.add-btn { height: 160rpx; justify-content: center; font-size: 50rpx; color: #ccc; border: 2rpx dashed #ccc; }

/* 配件列表 (垂直列表) */
.acc-list-v { display: flex; flex-direction: column; gap: 20rpx; }
.acc-row-card {
  position: relative; /* 确保删除按钮相对于卡片定位 */
  display: flex; align-items: center; padding: 20rpx; 
  background: #fff; border: 2rpx solid #eee; border-radius: 20rpx; transition: 0.2s;
  overflow: hidden; /* 防止溢出 */
}
.acc-row-card.selected { border-color: #0071E3; background: rgba(0,113,227,0.02); }
.acc-thumb { width: 100rpx; height: 100rpx; border-radius: 12rpx; background: #eee; margin-right: 20rpx; }
.acc-info { flex: 1; display: flex; flex-direction: column; justify-content: center; }
.acc-n { font-size: 28rpx; font-weight: 600; }
.acc-p { font-size: 26rpx; color: #666; margin-top: 6rpx; }

/* ======================================================== */
/* 优化后的配件按钮：胶囊样式，更大，更好点 */
/* ======================================================== */
.acc-add-btn {
  /* 1. 大小与形状 */
  min-width: 100rpx;        /* 保证最小宽度 */
  height: 56rpx;            /* 高度增加，手指好点 */
  border-radius: 28rpx;     /* 胶囊圆角 */
  padding: 0 24rpx;         /* 左右留白 */
  
  /* 2. 默认状态 (未选中)：模仿 Apple "获取" 按钮 */
  background: #F2F2F7;      /* 浅灰背景 */
  color: #0071E3;           /* 蓝色文字 */
  font-size: 26rpx;
  font-weight: 700;
  
  /* 3. 布局 */
  display: flex; 
  align-items: center; 
  justify-content: center;
  
  /* 4. 位置修正 */
  margin-left: 20rpx;  
  margin-right: 20rpx;      /* 稍微离边缘远一点点 */
  transition: all 0.2s;     /* 颜色变化过渡动画 */
}

/* 选中状态 (变蓝) */
.acc-add-btn.checked { 
  background: #0071E3;      /* 蓝色背景 */
  color: #fff;              /* 白色文字 */
  box-shadow: 0 4rpx 10rpx rgba(0, 113, 227, 0.3); /* 增加一点阴影 */
}

/* 点击时的反馈 - 已移到统一的动画样式区域 */


.admin-float-thumb { position: absolute; top: 10rpx; left: 10rpx; background: rgba(0,0,0,0.5); color: #fff; font-size: 18rpx; padding: 4rpx; border-radius: 4rpx; }

/* 底部结算 */
.modal-footer { height: 160rpx; border-top: 1rpx solid #eee; background: rgba(255,255,255,0.9); backdrop-filter: blur(20px); padding: 0 40rpx; display: flex; justify-content: space-between; align-items: center; flex-shrink: 0; }
.f-price { font-size: 44rpx; font-weight: 800; }

/* ============ 4. 对比表格 ============ */
.overlay { position: fixed; bottom: 0; left: 0; width: 100%; background: #fff; border-radius: 40rpx 40rpx 0 0; transform: translateY(110%); transition: 0.3s; padding-bottom: 60rpx; box-shadow: 0 -10rpx 40rpx rgba(0,0,0,0.1); }
.overlay.active { transform: translateY(0); }
.overlay-head { display: flex; justify-content: space-between; padding: 30rpx; border-bottom: 1rpx solid #eee; font-weight: 700; }
.specs-table { padding: 30rpx; }
.sp-row { display: flex; border-bottom: 1rpx solid #eee; }
.sp-row.header { background: #F9F9F9; font-weight: 700; border-radius: 10rpx; border: none; }
/* ========================================= */
/* 3. 对比表格样式微调 (适配动态列) */
/* ========================================= */
.sp-cell { 
  flex: 1; 
  padding: 20rpx 10rpx; 
  text-align: center; 
  font-size: 26rpx; 
  /* 允许文字换行，防止列太多挤爆 */
  word-wrap: break-word; 
  word-break: break-all; 
}
.sp-cell.label { width: 120rpx; flex: none; text-align: left; font-weight: 600; color: #333; }
.sp-cell.admin-w { width: 50rpx; flex: none; color: red; }

/* ============ 5. 配件详情 ============ */
.acc-detail-hero { width: 100%; min-height: 400rpx; background: #fff; display: flex; flex-direction: column; align-items: center; }
.acc-detail-info { padding: 40rpx; }
.acc-d-name { font-size: 40rpx; font-weight: 800; margin-bottom: 10rpx; }
.acc-d-price { font-size: 32rpx; color: #333; font-weight: 600; margin-bottom: 30rpx; }
.acc-d-desc { font-size: 28rpx; color: #666; line-height: 1.6; }

/* ============================================================== */
/* 1. 新增：自定义顶部错误提示 (替代 ugly toast) */
/* ============================================================== */
.top-error-toast {
  position: fixed; top: -100rpx; left: 0; width: 100%;
  height: 80rpx; line-height: 80rpx;
  background: #FF3B30; color: #fff;
  text-align: center; font-size: 28rpx; font-weight: 600;
  z-index: 9999;
  transition: top 0.3s cubic-bezier(0.18, 0.89, 0.32, 1.28);
  box-shadow: 0 4rpx 10rpx rgba(255, 59, 48, 0.3);
}
.top-error-toast.show { top: 0; }

/* ============================================================== */
/* 2. 加入成功弹窗 (Success Modal) - 优化层级和美观 */
/* ============================================================== */
.success-mask {
  position: fixed; top: 0; left: 0; width: 100%; height: 100%;
  background: rgba(0,0,0,0.4); backdrop-filter: blur(5px);
  z-index: 900; display: flex; align-items: center; justify-content: center; /* 确保比 detail modal (200) 高 */
}
.success-box {
  background: #fff; width: 600rpx; border-radius: 50rpx; padding: 70rpx 50rpx; /* 更圆润 */
  display: flex; flex-direction: column; align-items: center; text-align: center;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.15);
}
.s-icon {
  width: 120rpx; height: 120rpx; background: #E1F8E8; color: #00C853;
  border-radius: 50%; font-size: 60rpx; line-height: 120rpx; font-weight: bold;
  margin-bottom: 40rpx;
}
.s-title { font-size: 36rpx; font-weight: 800; color: #1D1D1F; margin-bottom: 16rpx; }
.s-desc { font-size: 26rpx; color: #86868b; margin-bottom: 50rpx; }

.s-btn-row { width: 100%; display: flex; gap: 20rpx; }
.s-btn {
  flex: 1; height: 90rpx; line-height: 90rpx; text-align: center; /* 更高 */
  border-radius: 45rpx; font-size: 30rpx; font-weight: 600;
}
.s-btn.outline { border: 2rpx solid #E5E5EA; color: #1D1D1F; background: #fff; }
.s-btn.fill { background: #000; color: #fff; }
.s-btn:active { opacity: 0.8; transform: scale(0.98); }

/* ============================================================== */
/* 2. 结算页美化 (Checkout Modal) */
/* ============================================================== */
/* 覆盖全屏，从下往上 */
.full-screen-overlay {
  height: 90% !important; /* 留出一点顶部 */
  background: #F5F5F7 !important; /* 整体灰底 */
  display: flex; flex-direction: column;
  z-index: 500; /* 确保层级正确 */
}

.checkout-header {
  padding: 30rpx 40rpx; background: #fff;
  display: flex; justify-content: space-between; align-items: center;
  border-radius: 40rpx 40rpx 0 0;
  border-bottom: 1rpx solid #f5f5f7;
}
.co-title { font-size: 32rpx; font-weight: 700; }

.checkout-scroll { flex: 1; overflow-y: auto; }
/* ============================================================== */
/* 2. 优化：订单确认页 (宽松布局) */
/* ============================================================== */
.checkout-body {
  padding: 40rpx; /* 加大内边距 */
  padding-bottom: 200rpx;
}

/* 分组标题 */
.group-title {
  font-size: 24rpx; color: #86868b; margin: 30rpx 0 16rpx 20rpx; font-weight: 600;
}

/* 白色卡片容器 - 优化间距 */
.group-card {
  background: #fff; border-radius: 30rpx; padding: 10rpx 40rpx; /* 内部也宽松点 */
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.03); 
  margin-bottom: 50rpx; /* 卡片之间拉开距离 */
}

/* --- 商品列表项 --- */
.cart-row {
  display: flex; justify-content: space-between; align-items: center;
  padding: 30rpx 0; border-bottom: 1rpx solid #f5f5f7;
}
.cart-row:last-child { border-bottom: none; }

.cr-info { flex: 1; padding-right: 20rpx; }
.cr-name { font-size: 28rpx; font-weight: 600; color: #1D1D1F; margin-bottom: 6rpx; }
.cr-spec { font-size: 22rpx; color: #86868b; }

.cr-action { text-align: right; display: flex; flex-direction: column; align-items: flex-end; }
.cr-price { font-size: 28rpx; font-weight: 700; color: #1D1D1F; margin-bottom: 10rpx; }

/* 迷你加减器 */
.mini-stepper {
  display: flex; align-items: center; background: #F5F5F7; border-radius: 10rpx;
}
.ms-btn { width: 44rpx; height: 44rpx; line-height: 40rpx; text-align: center; color: #666; font-size: 28rpx; }
.ms-btn:active { background: #e0e0e0; }
.ms-num { font-size: 24rpx; font-weight: 600; width: 40rpx; text-align: center; }

.empty-cart { padding: 60rpx; text-align: center; color: #ccc; font-size: 26rpx; }

/* 总价行 */
.total-row {
  padding: 30rpx 0; border-top: 1rpx solid #f5f5f7;
  display: flex; justify-content: space-between; align-items: center;
}
.big-price { font-size: 40rpx; font-weight: 800; color: #0071E3; }

/* --- 表单样式 (iOS List Style) - 优化 --- */
.form-group { padding: 0 0 0 30rpx; /* 左边距留给分割线 */ }
.form-item {
  display: flex; align-items: center; height: 110rpx; /* 更高，手指好点 */
  border-bottom: 1rpx solid #f5f5f5; padding-right: 30rpx;
}
.form-item:last-child { border-bottom: none; }

.form-label { width: 140rpx; font-size: 28rpx; font-weight: 600; color: #1D1D1F; }
.form-input { flex: 1; height: 100%; font-size: 28rpx; text-align: right; color: #333; }
.ph-style { color: #ccc; }

/* 底部按钮区 - 优化留白 */
.checkout-footer {
  padding: 30rpx 50rpx 80rpx; /* 左右边距加大 */
  background: #fff; border-top: 1rpx solid #eee;
}

/* ============ 6. 订单 & 密码 (保留旧样式作为兼容) ============ */
.order-sum { background: #f9f9f9; padding: 30rpx; border-radius: 20rpx; margin-bottom: 30rpx; font-size: 26rpx; font-weight: 600; }
.oval-input { background: #F5F5F7; height: 90rpx; border-radius: 45rpx; margin-bottom: 20rpx; padding: 0 40rpx; font-size: 28rpx; }

.pwd-mask { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.6); display: flex; align-items: center; justify-content: center; z-index: 999; visibility: hidden; opacity: 0; transition: 0.3s; }
.pwd-mask.active { visibility: visible; opacity: 1; }
.pwd-box { background: #fff; padding: 60rpx; border-radius: 40rpx; width: 600rpx; text-align: center; }
.pwd-tit { font-weight: 800; font-size: 36rpx; margin-bottom: 40rpx; }
.pwd-input { border: 2rpx solid #e5e5ea; height: 90rpx; border-radius: 45rpx; margin-bottom: 40rpx; text-align: center; font-size: 40rpx; letter-spacing: 5rpx; }
.pwd-cancel { margin-top: 30rpx; color: #888; font-size: 26rpx; }

/* 1. 顶部退出按钮样式 (替代标题) */
.btn-exit-center {
  background: #000;      /* 黑色背景 */
  color: #fff;           /* 白色文字 */
  font-size: 28rpx;
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.2);
}

/* ============================================== */
/* 1. 新增：自定义编辑弹窗样式 (美化版) */
/* ============================================== */
.custom-modal-mask {
  position: fixed; top: 0; left: 0; width: 100%; height: 100%;
  background: rgba(0,0,0,0.6); z-index: 1000;
  display: flex; align-items: center; justify-content: center;
}
.custom-modal-box {
  background: #fff; width: 600rpx; border-radius: 40rpx; padding: 50rpx 40rpx;
  display: flex; flex-direction: column; align-items: center;
}
.custom-modal-title {
  font-size: 34rpx; font-weight: 800; margin-bottom: 40rpx; color: #1D1D1F;
}
.custom-modal-input {
  background: #F5F5F7; width: 100%; height: 100rpx;
  border-radius: 50rpx; text-align: center; font-size: 32rpx;
  margin-bottom: 40rpx;
}
.custom-modal-btn-row {
  display: flex; gap: 30rpx; width: 100%;
}
.custom-btn {
  flex: 1; height: 90rpx; line-height: 90rpx; text-align: center;
  border-radius: 45rpx; font-weight: 600; font-size: 30rpx;
}
.c-btn-cancel { background: #F5F5F7; color: #888; }
.c-btn-confirm { background: #000; color: #fff; }

/* ======================================================== */
/* 1. 修复删除按钮：去掉红色块，只要X，且保持右上角定位 */
/* 覆盖之前所有的 admin-del 相关样式 */
/* ======================================================== */
.admin-del-corner, 
.admin-del-corner-top, 
.admin-del-mini {
  position: absolute !important;
  top: 0 !important;
  right: 0 !important;
  
  /* 关键修改：背景变透明，去掉那个难看的红块 */
  background: transparent !important; 
  
  /* 文字颜色保持红色，字体加大一点 */
  color: #FF3B30 !important;
  font-size: 36rpx !important; 
  font-weight: 900;
  
  /* 保证点击区域够大，但看不见背景 */
  width: 80rpx !important;
  height: 80rpx !important;
  
  /* 让 X 处于右上角稍微偏内一点的位置，看起来舒服 */
