.loader {
  width: 600rpx;
  height: 260rpx;
  border-radius: 20rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
  padding: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.12);
