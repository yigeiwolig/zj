.loading-bar {
  width: 100%;
  height: 20rpx;
  background: #E5E5EA;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
}

.loading-bar::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 50%;
  height: 100%;
  background: #1c1c1e;
  border-radius: 20rpx;
  z-index: 1;
  animation: loadingBar 0.6s alternate infinite ease-in-out;
}

.loader-label {
  color: #1c1c1e;
  font-size: 28rpx;
  font-weight: 700;
  animation: labelBlink 0.6s alternate infinite;
}

@keyframes labelBlink {
  from { opacity: 0.35; }
  to   { opacity: 1; }
}

@keyframes loadingBar {
  0%   { left: 0%; }
  50%  { left: 25%; }
  100% { left: 50%; }
}

