/* ================= 自定义加载中动画（使用 my 页面的样式） ================= */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(12px);
  z-index: 99999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loader {
  width: 600rpx;
  height: 260rpx;
  border-radius: 20rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
  padding: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.12);
  box-sizing: border-box;
}

.loading-bar {
  width: 100%;
  height: 20rpx;
  background: #E5E5EA;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
}

.loading-bar::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 50%;
  height: 100%;
  background: #1c1c1e;
  border-radius: 20rpx;
  z-index: 1;
  animation: loadingBar 0.6s alternate infinite ease-in-out;
}

.loader-label {
  color: #1c1c1e;
  font-size: 28rpx;
  font-weight: 700;
  animation: labelBlink 0.6s alternate infinite;
}

@keyframes labelBlink {
  from { opacity: 0.35; }
  to   { opacity: 1; }
}

@keyframes loadingBar {
  0%   { left: 0%; }
  50%  { left: 25%; }
  100% { left: 50%; }
}
