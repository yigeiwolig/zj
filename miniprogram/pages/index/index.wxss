/* 页面整体布局 */
.index-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #ffffff 0%, #fafafa 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

.index-page::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(0,0,0,0.02) 0%, transparent 70%);
  animation: rotate 30s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 真正的3D球体旋转动画 */
@keyframes rotateSphere {
  0% {
    transform: rotateX(-20deg) rotateY(0deg);
  }
  25% {
    transform: rotateX(-20deg) rotateY(90deg);
  }
  50% {
    transform: rotateX(-20deg) rotateY(180deg);
  }
  75% {
    transform: rotateX(-20deg) rotateY(270deg);
  }
  100% {
    transform: rotateX(-20deg) rotateY(360deg);
  }
}

/* 内容容器 */
.content-container {
  width: 100%;
  max-width: 680rpx;
  position: relative;
  z-index: 1;
}

/* 品牌展示区 */
.hero-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  margin-bottom: 120rpx;
}

.hero-content {
  position: relative;
}

.hero-title {
  margin-bottom: 16rpx;
}

.title-main {
  display: block;
  font-size: 56rpx;
  font-weight: 200;
  color: #000000;
  margin-bottom: 12rpx;
  line-height: 1.2;
  letter-spacing: 4rpx;
  position: relative;
}

.title-main::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 3rpx;
  background: linear-gradient(90deg, transparent, #000000, transparent);
  border-radius: 2rpx;
}

.title-sub {
  display: block;
  font-size: 28rpx;
  color: #888888;
  line-height: 1.4;
  font-weight: 300;
  letter-spacing: 1rpx;
  margin-top: 16rpx;
}



/* 操作区域 */
.action-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 60rpx;
  margin-top: 40rpx;
}

/* 主按钮 - 真正的3D球体 */
.main-action-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: none;
  border: none;
  font-weight: 300;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.3),
    0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  cursor: pointer;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: visible;
  position: relative;
  padding: 0;
  transform-style: preserve-3d;
  perspective: 1000rpx;
  flex-shrink: 0;
  /* 禁用小程序默认点击效果 */
  -webkit-tap-highlight-color: transparent;
  user-select: none;
  outline: none;
}

/* 3D球体容器 */
.sphere-3d-wrapper {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  transform-style: preserve-3d;
  animation: rotateSphere 8s linear infinite;
}

/* 3D球体 */
.sphere-3d {
  width: 100%;
  height: 100%;
  position: relative;
  transform-style: preserve-3d;
  transform: rotateX(-20deg) rotateY(0deg);
}

/* 球体横截面 - 形成球形 */
.sphere-ring {
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(0, 0, 0, 0.8);
  background: radial-gradient(circle at center, rgba(0, 0, 0, 0.1), transparent);
}

.sphere-ring.ring-1 {
  transform: rotateY(0deg);
  background: radial-gradient(circle at 30% 30%, #444444, transparent 70%);
  border-color: #222222;
}

.sphere-ring.ring-2 {
  transform: rotateY(30deg);
  background: radial-gradient(circle at 25% 35%, #333333, transparent 75%);
  border-color: #333333;
}

.sphere-ring.ring-3 {
  transform: rotateY(60deg);
  background: radial-gradient(circle at 20% 40%, #555555, transparent 65%);
  border-color: #111111;
}

.sphere-ring.ring-4 {
  transform: rotateY(90deg);
  background: radial-gradient(circle at 15% 45%, #222222, transparent 80%);
  border-color: #444444;
}

.sphere-ring.ring-5 {
  transform: rotateY(120deg);
  background: radial-gradient(circle at 20% 40%, #666666, transparent 60%);
  border-color: #333333;
}

.sphere-ring.ring-6 {
  transform: rotateY(150deg);
  background: radial-gradient(circle at 25% 35%, #333333, transparent 70%);
  border-color: #222222;
}

.sphere-ring.ring-7 {
  transform: rotateY(180deg);
  background: radial-gradient(circle at 30% 30%, #111111, transparent 75%);
  border-color: #555555;
}

.sphere-ring.ring-8 {
  transform: rotateY(210deg);
  background: radial-gradient(circle at 35% 25%, #444444, transparent 65%);
  border-color: #111111;
}

/* 球体中心核心 */
.sphere-core {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: radial-gradient(circle at 30% 30%, #666666, #000000 70%);
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  box-shadow: 
    0 0 20rpx rgba(0, 0, 0, 0.5),
    inset -2rpx -2rpx 4rpx rgba(255, 255, 255, 0.1),
    inset 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 点击动画效果 - 黑色变白色，显示文字 */
.main-action-btn.animate {
  animation: buttonClickTransform 6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  overflow: hidden;
}



/* 确保初始状态是3D圆形 */
.main-action-btn:not(.animate):not(.animation-complete) {
  perspective: 1000rpx;
}

.main-action-btn:not(.animate):not(.animation-complete) .sphere-3d-wrapper {
  animation: rotateSphere 8s linear infinite;
}

.main-action-btn.animate .sphere-3d-wrapper {
  animation: none;
  opacity: 0;
  transform: scale(0);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes buttonClickTransform {
  0% {
    width: 120rpx;
    height: 120rpx;
    border-radius: 60rpx;
    background: none;
    transform: scale(1);
    box-shadow: 
      0 8rpx 32rpx rgba(0, 0, 0, 0.3),
      0 4rpx 16rpx rgba(0, 0, 0, 0.2);
    perspective: 1000rpx;
  }
  10% {
    transform: scale(1.1);
    box-shadow: 
      0 12rpx 48rpx rgba(0, 0, 0, 0.4),
      0 6rpx 24rpx rgba(0, 0, 0, 0.3);
  }
  20% {
    transform: scale(1);
    box-shadow: 
      0 6rpx 24rpx rgba(0, 0, 0, 0.25),
      0 3rpx 12rpx rgba(0, 0, 0, 0.15);
  }
  40% {
    width: 120rpx;
    height: 120rpx;
    border-radius: 60rpx;
    background: none;
    transform: scale(1);
    box-shadow: 
      0 6rpx 24rpx rgba(0, 0, 0, 0.25),
      0 3rpx 12rpx rgba(0, 0, 0, 0.15);
    perspective: 1000rpx;
  }
  35% {
    width: 120rpx;
    height: 120rpx;
    border-radius: 60rpx;
    background-color: #ffffff;
    border: none;
    transform: scale(1);
    box-shadow: 0 8rpx 28rpx rgba(0, 0, 0, 0.12);
    perspective: 1000rpx;
  }
  55% {
    width: 560rpx;
    height: 85rpx;
    border-radius: 42rpx;
    background-color: #ffffff;
    border: 4rpx solid #000000;
    transform: scale(1);
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
    perspective: 1000rpx;
  }
  83.3% {
    width: 560rpx;
    height: 85rpx;
    border-radius: 42rpx;
    background-color: #ffffff;
    border: 4rpx solid #000000;
    transform: scale(1);
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
    perspective: 1000rpx;
  }
  88% {
    width: 560rpx;
    height: 85rpx;
    border-radius: 42rpx;
    background-color: #ffffff;
    border: 4rpx solid #000000;
    transform: scale(1);
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
    perspective: 1000rpx;
  }
  94% {
    width: 560rpx;
    height: 85rpx;
    border-radius: 42rpx;
    background-color: #ffffff;
    border: 4rpx solid #000000;
    transform: scale(1);
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
    perspective: 1000rpx;
  }
  100% {
    width: 560rpx;
    height: 85rpx;
    border-radius: 42rpx;
    background-color: #ffffff;
    border: 4rpx solid #000000;
    transform: scale(1);
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
    perspective: 1000rpx;
  }
}

/* 动画状态下的按钮内容 */
.main-action-btn.animate .btn-content {
  justify-content: center;
  padding: 0;
  position: relative;
}

/* 滑动遮罩效果 - 第一阶段 */
.main-action-btn.animate::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(0,0,0,0.8), transparent);
  animation: slideShinePhase1 2.2s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  animation-delay: 3s;
  pointer-events: none;
}





@keyframes slideShinePhase1 {
  0% {
    left: -100%;
    opacity: 0;
  }
  10% {
    opacity: 0;
  }
  50% {
    opacity: 1;
  }
  100% {
    left: 100%;
    opacity: 0;
  }
}





.main-action-btn.animate .btn-icon {
  opacity: 0;
  transition: opacity 0.6s ease 0.5s;
}









/* 动画状态下的文字颜色 */
.main-action-btn.animate .btn-icon,
.main-action-btn.animate .btn-text {
  color: #000000;
}

/* 简化文字动画 */
.main-action-btn.animate .btn-icon {
  opacity: 0;
  transition: opacity 0.6s ease 0.5s;
}

.main-action-btn.animate .btn-text {
  opacity: 1;
  font-size: 30rpx;
  padding: 0 30rpx;
  width: auto;
  max-width: 460rpx;
  font-weight: 500;
  letter-spacing: 3rpx;
  text-align: center;
  transform: translate(-50%, -50%) scale(1);
  transition: all 0.6s ease 1.2s;
}

.main-action-btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.1);
  transform: translate(-50%, -50%);
  transition: all 0.6s ease;
  pointer-events: none;
}

.main-action-btn:active::before {
  width: 300rpx;
  height: 300rpx;
}

.main-action-btn:active {
  box-shadow: 
    0 4rpx 8rpx rgba(0, 0, 0, 0.3),
    0 8rpx 16rpx rgba(0, 0, 0, 0.2);
}

.main-action-btn:active .sphere-3d-wrapper {
  animation-play-state: paused;
}

.main-action-btn[disabled] {
  opacity: 0.7;
  cursor: not-allowed;
  perspective: 1000rpx;
}

.main-action-btn[disabled] .sphere-3d-wrapper {
  animation: none;
}

.main-action-btn[disabled]:active {
  transform: scale(1);
  box-shadow: 
    0 4rpx 8rpx rgba(0, 0, 0, 0.3),
    0 8rpx 16rpx rgba(0, 0, 0, 0.2);
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden; /* 防止内容溢出影响定位 */
}

.btn-icon {
  font-size: 32rpx;
  color: #ffffff;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.btn-text {
  font-size: 26rpx;
  color: #ffffff;
  font-weight: 300;
  white-space: nowrap;
  opacity: 0;

  letter-spacing: 1rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: auto;
  box-sizing: border-box; /* 使用box-sizing */
  text-align: center;
  pointer-events: none; /* 防止文字影响点击 */
  z-index: 10; /* 确保文字在最上层 */
}

/* 动画状态下的文字定位 */
.btn-text.animate {
  position: absolute; /* 使用absolute定位 */
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 30rpx;
  font-weight: 500;
  letter-spacing: 3rpx;
  color: #000000; /* 黑色文字 */
  padding: 0 30rpx;
  opacity: 1;
  animation: textFadeInFixed 2.2s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  z-index: 20; /* 确保文字在最上层 */
}

/* 状态消息 */
.status-messages {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  opacity: 0;
  animation: fadeInUp 0.5s ease forwards;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.error-card,
.retry-card {
  background: rgba(250, 250, 250, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 36rpx;
  border: 1rpx solid rgba(229, 229, 229, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  min-height: 100rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.error-card:hover,
.retry-card:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.error-text,
.retry-text {
  flex: 1;
  font-size: 26rpx;
  color: #333333;
  line-height: 1.4;
  font-weight: 300;
  text-align: center;
}

.retry-btn {
  background: #000000;
  color: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx 32rpx;
  font-size: 24rpx;
  border: none;
  font-weight: 300;
  transition: all 0.3s ease;
  min-width: 120rpx;
}

.retry-btn:active {
  transform: scale(0.95);
  background: #333333;
}

/* 位置模拟器 */
.location-simulator {
  margin-top: 60rpx;
  padding: 40rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-radius: 28rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.1);
  animation: fadeInUp 0.6s ease forwards;
}

.simulator-header {
  text-align: center;
  margin-bottom: 32rpx;
}

.simulator-title {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #000000;
  margin-bottom: 8rpx;
}

.simulator-subtitle {
  display: block;
  font-size: 24rpx;
  color: #888888;
  font-weight: 300;
}

.location-options {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.location-btn {
  background: #ffffff;
  border: 2rpx solid #e5e5e5;
  border-radius: 20rpx;
  padding: 24rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.location-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(0,0,0,0.05), transparent);
  transition: left 0.6s ease;
}

.location-btn:hover::before {
  left: 100%;
}

.location-btn:active {
  transform: scale(0.96);
}

.location-btn.blocked {
  border-color: #ff6b6b;
  background: #fff5f5;
}

.location-btn.blocked:active {
  background: #ffebeb;
}

.location-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  transition: color 0.3s ease;
}

.location-btn.blocked .location-name {
  color: #ff6b6b;
}

.location-status {
  font-size: 22rpx;
  color: #52c41a;
  font-weight: 300;
}

.location-btn.blocked .location-status {
  color: #ff6b6b;
}

.current-location {
  text-align: center;
  padding: 20rpx;
  background: rgba(0, 0, 0, 0.02);
  border-radius: 16rpx;
  border: 1rpx dashed rgba(0, 0, 0, 0.1);
}

.current-label {
  display: block;
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.current-value {
  display: block;
  font-size: 26rpx;
  color: #000000;
  font-weight: 500;
  font-family: 'SF Mono', 'Monaco', 'Inconsolata', monospace;
}

/* 平板适配 */
@media (min-width: 768px) {
  .index-page {
    padding: 60rpx 40rpx;
  }
  
  .content-container {
    max-width: 800rpx;
  }
  
  .title-main {
    font-size: 56rpx;
  }
  
  .title-sub {
    font-size: 28rpx;
  }
  
  .main-action-btn {
    width: 140rpx;
    height: 140rpx;
    border-radius: 70rpx;
    min-width: 140rpx;
    max-width: 140rpx;
    min-height: 140rpx;
    max-height: 140rpx;
  }
  
  .main-action-btn:hover {
    width: 480rpx;
  }
  
  .main-action-btn[disabled]:hover {
    width: 140rpx;
  }
  
  .btn-icon {
    font-size: 36rpx;
  }
  
  .btn-text {
    font-size: 32rpx;
  }
  
  .location-options {
    gap: 24rpx;
  }
}





