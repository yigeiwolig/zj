<view class="page index-page {{step > 0 ? 'animating' : ''}}">
  <!-- 顶部标题 (动画开始时隐藏) -->
  <view class="header-section {{step > 0 ? 'fade-out' : ''}}">
    <text class="main-title">新品体验</text>
    <text class="sub-title">INNOVATION LAB</text>
  </view>

  <!-- 中部：动画舞台 -->
  <view class="hero-section">
    <!-- 文字轨道 (绝对定位) -->
    <view class="text-track" wx:if="{{step >= 3}}">
      <text class="char char-1">M</text>
      <text class="char char-2">T</text>
      <text class="char char-3">引</text>
      <text class="char char-4">领</text>
      <text class="char char-5">创</text>
      <text class="char char-6">新</text>
    </view>

    <!-- 核心元素：从液态按钮变成齿轮 -->
    <view class="liquid-btn step-{{step}}" bindtap="handleAccess">
      <view class="gear-shape">
        <view class="teeth"></view>
        <view class="hub"></view>
      </view>
      <view class="highlight-dot"></view>
      <text class="btn-text" wx:if="{{step === 0}}">EXPLORE</text>
    </view>
  </view>

  <!-- 底部：位置工具 (动画开始时隐藏) -->
  <view class="footer-section {{step > 0 ? 'fade-out' : ''}}">
    <view class="tool-label">LOCATION SIMULATOR</view>
    <view class="loc-grid">
      <view class="chip active"><text>Shenzhen</text><view class="status green"></view></view>
      <view class="chip"><text>Guangzhou</text><view class="status green"></view></view>
    </view>
  </view>

  <!-- 遮罩层：模拟布的效果，在文字水平线下方 -->
  <view class="curtain-mask {{step >= 5 ? 'active' : ''}}"></view>
</view>
