/* === 申请记录列表样式 === */
/* === 申请记录卡片样式 === */
.activity-list {
  padding: 0 40rpx;
  display: flex; flex-direction: column; gap: 20rpx;
  margin-bottom: 40rpx;
}

.act-card {
  background: #fff; border-radius: 24rpx;
  /* 允许内容自适应高度，避免维修备注被裁剪 */
  min-height: 170rpx;
  padding: 26rpx 30rpx 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center; /* 左侧文字整体垂直居中 */
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
  position: relative;
  box-sizing: border-box;
  overflow: visible;
}

/* 🔴 主要内容行：保持横向布局，不受拒绝理由影响 */
.act-main-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.act-left { flex: 1; display: flex; flex-direction: column; gap: 8rpx; }

.act-title { display: flex; align-items: center; }

.act-tag {
  font-size: 18rpx; padding: 4rpx 10rpx; border-radius: 8rpx; margin-right: 12rpx; font-weight: 700;
}
.act-tag.video { background: #E3F2FD; color: #1565C0; border: 1px solid rgba(21, 101, 192, 0.25); }
.act-tag.device { background: #F3E5F5; color: #7B1FA2; border: 1px solid rgba(123, 31, 162, 0.25); }
.act-tag.repair { background: #F3E5F5; color: #7B1FA2; border: 1px solid rgba(123, 31, 162, 0.25); }

.act-name { font-size: 28rpx; font-weight: 600; color: #333; }
.act-time { font-size: 22rpx; color: #999; }

.status-pill {
  /* 固定 pill 高度，保证与“撤销”完全一致 */
  height: 44rpx;
  line-height: 44rpx;
  box-sizing: border-box;

  /* 统一宽度（和撤销一致） */
  min-width: 124rpx;
  justify-content: center;

  display: flex;
  align-items: center;
  font-size: 22rpx;
  font-weight: 600;
  padding: 0 20rpx;
  border-radius: 30rpx;
}
.status-pill.processing { background: #FFF8E1; color: #FFA000; }
.status-pill.success { background: #E8F5E9; color: #34C759; }
.status-pill.fail { background: #FFEBEE; color: #FF3B30; }
.status-pill.info { background: #FFEBEE; color: #E57373; }

.dot-p { width: 10rpx; height: 10rpx; background: #FFA000; border-radius: 50%; margin-right: 8rpx; }
.dot-s { width: 10rpx; height: 10rpx; background: #34C759; border-radius: 50%; margin-right: 8rpx; }

.status-group-fail { display: flex; flex-direction: column; align-items: flex-end; gap: 6rpx; }
.re-btn { font-size: 20rpx; color: #007AFF; }

/* 拒绝理由容器 - 独立显示在卡片下方 */
.reject-reason-wrapper {
  width: 100%;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #F0F0F0;
}

/* 拒绝理由样式 */
.reject-reason {
  width: 100%;
  padding: 16rpx;
  background: #FFF5F5;
  border-radius: 12rpx;
  border-left: 4rpx solid #FF3B30;
  /* 🔴 关键：确保文字可以换行，不会撑开布局 */
  word-wrap: break-word;
  word-break: break-all;
  box-sizing: border-box;
}

.reason-label {
  font-size: 22rpx;
  color: #FF3B30;
  font-weight: 600;
  margin-right: 8rpx;
  /* 🔴 确保标签不换行 */
  white-space: nowrap;
}

.reason-text {
  font-size: 22rpx;
  color: #666;
  line-height: 1.6;
  /* 🔴 关键：允许文字换行 */
  word-wrap: break-word;
  word-break: break-all;
  display: inline;
}

